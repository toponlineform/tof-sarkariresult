---
const { title, description = "Latest Government Jobs, Admit Cards, and Results at TopOnlineForm.com" } = Astro.props;
const siteUrl = "https://toponlineform.com";
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} | Top Online Form</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={new URL(Astro.url.pathname, siteUrl)} />
    <meta name="robots" content="index, follow" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <script is:inline src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 flex flex-col min-h-screen font-sans">

    <header class="bg-red-700 text-white shadow-lg sticky top-0 z-50">
        <div class="max-w-7xl mx-auto px-4 py-3 flex flex-col md:flex-row justify-between items-center">
            <a href="/" class="text-2xl md:text-3xl font-extrabold uppercase tracking-tighter hover:text-gray-200 transition">
                TOP ONLINE FORM
            </a>
            <nav class="flex space-x-4 mt-2 md:mt-0 font-semibold text-sm md:text-base">
                <a href="/" class="hover:underline">Home</a>
                <a href="#latest-jobs" class="hover:underline">Latest Jobs</a>
                <a href="#results" class="hover:underline">Results</a>
                <a href="#admit-card" class="hover:underline">Admit Card</a>
            </nav>
        </div>
    </header>

    <main class="flex-grow w-full max-w-7xl mx-auto p-3 md:p-6">
        <slot />
    </main>

    <footer class="bg-gray-900 text-white py-8 mt-auto border-t-4 border-red-700">
        <div class="max-w-7xl mx-auto px-4 text-center">
            <h2 class="text-xl font-bold mb-2">TopOnlineForm.com</h2>
            <p class="text-gray-400 text-sm mb-4">India's Most Trusted Portal for Government Job Updates.</p>
            <p class="mt-4 text-xs text-gray-600">Copyright Â© 2025 TopOnlineForm. All Rights Reserved.</p>
        </div>
    </footer>

</body>
</html>
