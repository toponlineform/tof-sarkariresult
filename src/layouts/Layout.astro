---
import MarketingPopup from '../components/MarketingPopup.astro';

const { 
  title, 
  description, 
  isPost = false, // Post page ke liye extra check
  categoryName = "" 
} = Astro.props;

const siteUrl = "https://toponlineform.com";
const canonicalURL = new URL(Astro.url.pathname, siteUrl);

// --- üöÄ INFINITY SEO TITLE LOGIC ---
// Google 60-char limit aur keyword priority ko dhyan me rakh kar banaya gaya hai.
let seoTitle = "";
let seoDescription = description;

const currentPath = Astro.url.pathname;

if (currentPath === "/" || currentPath === "") {
  // 1. HOME PAGE: Branding + High Volume Keywords
  seoTitle = "Top Online Form: Sarkari Result, Latest Govt Jobs & Admit Card 2026";
  seoDescription = seoDescription || "India's No.1 Portal for Sarkari Result, Latest Government Jobs, Admit Cards, and Results updates at TopOnlineForm.com.";
} 
else if (isPost) {
  // 2. SINGLE POST PAGE: [Job Name] + Action Keywords
  // Format: "SSC GD Online Form 2026 | Eligibility, Last Date - Top Online Form"
  seoTitle = `${title} 2026 Online Form | Eligibility, Last Date - Top Online Form`;
} 
else {
  // 3. CATEGORY/OTHER PAGES: [Category] + 2026
  seoTitle = `${title} 2026 | Latest Updates & Online Form - Top Online Form`;
}
