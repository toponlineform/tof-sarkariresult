---
const { title, description = "Latest Government Jobs, Admit Cards, and Results at TopOnlineForm.com" } = Astro.props;
const siteUrl = "https://toponlineform.com";
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} | Top Online Form</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={new URL(Astro.url.pathname, siteUrl)} />
    <meta name="robots" content="index, follow" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <script is:inline src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 flex flex-col min-h-screen font-sans">

    <header class="bg-red-700 text-white shadow-lg sticky top-0 z-50">
        <div class="max-w-7xl mx-auto px-4 py-3 flex flex-col md:flex-row justify-between items-center">
            
            <a href="/" class="text-2xl md:text-3xl font-extrabold uppercase tracking-tighter hover:text-gray-200 transition mb-2 md:mb-0">
                TOP ONLINE FORM
            </a>
            
            <nav class="flex flex-wrap justify-center gap-3 md:gap-6 font-semibold text-xs md:text-sm uppercase tracking-wide">
                <a href="/" class="hover:text-yellow-300 transition">Home</a>
                <a href="/active-jobs" class="hover:text-yellow-300 transition text-yellow-100 font-bold">Active Jobs (Live)</a>
                <a href="#latest-jobs" class="hover:text-yellow-300 transition">Latest Jobs</a>
                <a href="#admit-card" class="hover:text-yellow-300 transition">Admit Card</a>
                <a href="#results" class="hover:text-yellow-300 transition">Results</a>
                <a href="#answer-key" class="hover:text-yellow-300 transition">Answer Key</a>
                <a href="#admission" class="hover:text-yellow-300 transition">Admission</a>
                <a href="#syllabus" class="hover:text-yellow-300 transition">Syllabus</a>
            </nav>

        </div>
    </header>

    <main class="flex-grow w-full max-w-7xl mx-auto p-3 md:p-6">
        <slot />
    </main>

    <footer class="bg-gray-900 text-white py-8 mt-auto border-t-4 border-red-700">
        <div class="max-w-7xl mx-auto px-4 text-center">
            <h2 class="text-xl font-bold mb-2">TopOnlineForm.com</h2>
            <p class="text-gray-400 text-sm mb-4">India's Most Trusted Portal for Government Job Updates.</p>
            
            <div class="flex justify-center flex-wrap gap-4 text-xs text-gray-500 mb-4">
                <a href="/about" class="hover:text-white">About Us</a>
                <a href="/contact" class="hover:text-white">Contact Us</a>
                <a href="/disclaimer" class="hover:text-white">Disclaimer</a>
                <a href="/privacy-policy" class="hover:text-white">Privacy Policy</a>
            </div>
            
            <p class="text-xs text-gray-600">Copyright Â© 2025 TopOnlineForm. All Rights Reserved.</p>
        </div>
    </footer>

</body>
</html>
