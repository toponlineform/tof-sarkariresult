---
import Layout from '../layouts/Layout.astro';
import AdSlot from '../components/AdSlot.astro'; 
import { allPosts } from '../data/index.js';

export async function getStaticPaths() {
  // 1. Categories Define karein (Ensure names match your file exports/types)
  const categories = [
    { slug: 'latest-jobs', name: 'Latest Jobs' },
    { slug: 'admit-card', name: 'Admit Card' },
    { slug: 'results', name: 'Result' },       // Note: Usually 'Result' singular in data
    { slug: 'answer-key', name: 'Answer Key' },
    { slug: 'admission', name: 'Admission' },
    { slug: 'syllabus', name: 'Syllabus' },
    { slug: 'previous-papers', name: 'Previous Paper' }
  ];

  return categories.map((cat) => {
    // 2. Data Filter Logic (Updated for 'types' support)
    // Ab ye 'Category Name' bhi check karega AUR 'types' array bhi check karega.
    const filteredPosts = allPosts.filter(post => {
        const isMainCategory = post.category === cat.name;
        const isTagged = post.types && post.types.includes(cat.name);
        return isMainCategory || isTagged;
    });
    
    // ‚úÖ 3. ULTIMATE SORTING LOGIC (With Syllabus & Reopen Support)
    filteredPosts.sort((a, b) => {
        const parseDate = (dateStr) => {
            if (!dateStr) return 0;
            const parts = dateStr.split('/');
            return new Date(`${parts[2]}-${parts[1]}-${parts[0]}`).getTime();
        };

        let dateA, dateB;

        // üß† Category Specific Date Priority
        if (cat.slug === 'latest-jobs') {
            // Latest Jobs: Priority = Reopen Date > Post Date
            // (Note: Generic 'updatedDate' yahan use nahi kiya taaki Answer Key aane par Job upar na kude)
            dateA = parseDate(a.reopenDate || a.postDate);
            dateB = parseDate(b.reopenDate || b.postDate);
        } 
        else if (cat.slug === 'admit-card') {
            // Admit Card: Priority = Admit Card Date > Updated Date
            dateA = parseDate(a.admitCardDate || a.updatedDate || a.postDate);
            dateB = parseDate(b.admitCardDate || b.updatedDate || b.postDate);
        } 
        else if (cat.slug === 'answer-key') {
            // Answer Key: Priority = Answer Key Date
            dateA = parseDate(a.answerKeyDate || a.updatedDate || a.postDate);
            dateB = parseDate(b.answerKeyDate || b.updatedDate || b.postDate);
        }
        else if (cat.slug === 'results') {
            // Result: Priority = Result Date
            dateA = parseDate(a.resultDate || a.updatedDate || a.postDate);
            dateB = parseDate(b.resultDate || b.updatedDate || b.postDate);
        }
        else if (cat.slug === 'syllabus') {
            // ‚úÖ Syllabus: Priority = Syllabus Date
            dateA = parseDate(a.syllabusDate || a.updatedDate || a.postDate);
            dateB = parseDate(b.syllabusDate || b.updatedDate || b.postDate);
        }
        else {
            // Default Fallback (Admission/Previous Paper)
            dateA = parseDate(a.updatedDate || a.postDate);
            dateB = parseDate(b.updatedDate || b.postDate);
        }

        // Step A: Date Compare (Newest First)
        if (dateB !== dateA) {
            return dateB - dateA;
        }

        // Step B: ID Compare (Fallback for same day posts)
        return (b.id || 0) - (a.id || 0);
    });

    return {
      params: { category: cat.slug },
      props: { categoryName: cat.name, posts: filteredPosts },
    };
  });
}

const { categoryName, posts } = Astro.props;

// Helper: Button Border Color based on Category
const getBorderColor = (cat) => {
    const c = cat.toLowerCase();
    if (c.includes('admit')) return 'border-blue-600';
    if (c.includes('result')) return 'border-green-600';
    return 'border-red-600';
};
