---
// src/pages/tools/html-to-image.astro
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Pro HTML to Image Converter - TopOnlineForm">
  
  <main class="tool-wrapper">
    <div class="header-section">
      <span class="pro-badge">PRO TOOLS</span>
      <h1>‚ö° HTML to Image Converter</h1>
      <p>Convert HTML/CSS code into high-quality images. <br>Perfect for social media posts, email snippets, and design mockups.</p>
    </div>

    <div class="editor-grid">
      
      <div class="input-panel">
        
        <div class="panel-header">
           <h3>üë®‚Äçüíª Code Editor</h3>
           <button id="resetBtn" class="sm-btn">‚Ü∫ Reset Default</button>
        </div>

        <div class="code-group">
          <div class="label-row">
            <span class="tag html">HTML</span>
          </div>
          <textarea id="htmlInput" spellcheck="false" placeholder="<div>Hello World</div>"></textarea>
        </div>

        <div class="code-group">
           <div class="label-row">
            <span class="tag css">CSS</span>
           </div>
          <textarea id="cssInput" spellcheck="false" placeholder=".box { color: red; }"></textarea>
        </div>

      </div>

      <div class="preview-panel">
        <div class="panel-header">
            <h3>üëÅÔ∏è Live Preview</h3>
            <div class="bg-toggle">
                <label>Background:</label>
                <input type="color" id="bgColorPicker" value="#ffffff">
                <label class="checkbox-label"><input type="checkbox" id="transparentBg"> Transparent</label>
            </div>
        </div>
        
        <div class="canvas-wrapper">
          <div class="canvas-scroll">
            <div id="renderTarget" class="render-box">
              </div>
          </div>
        </div>

        <div class="export-bar">
            <div class="settings">
                <select id="scaleSelect">
                    <option value="1">1x (Standard)</option>
                    <option value="2" selected>2x (HD)</option>
                    <option value="4">4x (Ultra HD)</option>
                </select>
                <select id="formatSelect">
                    <option value="png">PNG</option>
                    <option value="jpeg">JPG</option>
                </select>
            </div>
            <button id="downloadBtn" class="download-btn">üì∏ Download Image</button>
        </div>

      </div>

    </div>
  </main>
</Layout>

<script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"></script>

<script is:inline>
  // --- ELEMENTS ---
  const htmlInput = document.getElementById('htmlInput');
  const cssInput = document.getElementById('cssInput');
  const renderTarget = document.getElementById('renderTarget');
  const downloadBtn = document.getElementById('downloadBtn');
  const resetBtn = document.getElementById('resetBtn');
  
  // Settings
  const bgColorPicker = document.getElementById('bgColorPicker');
  const transparentBg = document.getElementById('transparentBg');
  const scaleSelect = document.getElementById('scaleSelect');
  const formatSelect = document.getElementById('formatSelect');

  // --- DEFAULT DATA ---
  const defaultHTML = `<div class="card">
  <div class="header">
    <span class="dot red"></span>
    <span class="dot yellow"></span>
    <span class="dot green"></span>
  </div>
  <div class="content">
    <h1>üöÄ Success!</h1>
    <p>Your image is now pixel perfect.</p>
  </div>
</div>`;

  const defaultCSS = `.card {
  background: #1e293b;
  color: white;
  width: 300px;
  border-radius: 12px;
  overflow: hidden;
  box-shadow: 0 20px 60px rgba(0,0,0,0.5);
  font-family: sans-serif;
  border: 1px solid #334155;
}

.header {
  background: #0f172a;
  padding: 15px;
  display: flex; gap: 8px;
}

.dot { width: 12px; height: 12px; border-radius: 50%; }
.red { background: #ef4444; }
.yellow { background: #facc15; }
.green { background: #22c55e; }

.content { padding: 30px; text-align: center; }
h1 { margin: 0 0 10px 0; color: #38bdf8; }
p { color: #94a3b8; margin: 0; }`;

  // --- INITIALIZATION ---
  function init() {
    htmlInput.value = defaultHTML;
    cssInput.value = defaultCSS;
    updatePreview();
  }
  
  // Event Listeners
  htmlInput.addEventListener('input', updatePreview);
  cssInput.addEventListener('input', updatePreview);
  resetBtn.addEventListener('click', init);

  function updateBg() {
    if(transparentBg.checked) {
      renderTarget.style.backgroundColor = 'transparent';
    } else {
      renderTarget.style.backgroundColor = bgColorPicker.value;
    }
  }
  bgColorPicker.addEventListener('input', () => { transparentBg.checked = false; updateBg(); });
  transparentBg.addEventListener('change', updateBg);

  // --- LIVE PREVIEW ---
  function updatePreview() {
    const html = htmlInput.value;
    const css = `<style>${cssInput.value}</style>`;
    renderTarget.innerHTML = css + html;
    updateBg();
  }

  // --- üì∏ FINAL FIXED DOWNLOAD FUNCTION ---
  downloadBtn.addEventListener('click', () => {
    const originalText = downloadBtn.innerText;
    downloadBtn.innerText = "Processing... ‚öôÔ∏è";
    downloadBtn.style.opacity = "0.7";
    
    // 1. Get Settings
    const scale = parseInt(scaleSelect.value);
    const format = formatSelect.value;
    const isTransparent = transparentBg.checked;
    const bg = isTransparent ? null : bgColorPicker.value;

    // 2. Exact Calculation of Size (The Fix)
    // Hum bounding rect se exact decimals bhi pakad lenge taki cut na ho
    const rect = renderTarget.getBoundingClientRect();
    const exactWidth = Math.ceil(rect.width);
    const exactHeight = Math.ceil(rect.height);

    html2canvas(renderTarget, {
      scale: scale,
      backgroundColor: bg,
      logging: false,
      useCORS: true,
      allowTaint: true,
      
      // ‚úÖ FORCE EXACT DIMENSIONS
      width: exactWidth,
      height: exactHeight,
      windowWidth: exactWidth,  // Virtual window size matches element
      windowHeight: exactHeight,
      
      x: 0, 
      y: 0,
      scrollX: 0,
      scrollY: 0,

      // Clone ko reset karna taki wo shift na ho
      onclone: (clonedDoc) => {
          const el = clonedDoc.getElementById('renderTarget');
          el.style.margin = "0";
          el.style.transform = "none";
          // Position fixed top-left ensures it stays at 0,0 inside the screenshot
          el.style.position = "fixed"; 
          el.style.top = "0";
          el.style.left = "0";
      }
    }).then(canvas => {
      const link = document.createElement('a');
      link.download = `design-${Date.now()}.${format}`;
      link.href = canvas.toDataURL(`image/${format}`);
      link.click();
      
      downloadBtn.innerText = "‚úÖ Saved!";
      setTimeout(() => {
        downloadBtn.innerText = originalText;
        downloadBtn.style.opacity = "1";
      }, 2000);
    }).catch(err => {
        console.error(err);
        alert('Error: ' + err.message);
        downloadBtn.innerText = originalText;
        downloadBtn.style.opacity = "1";
    });
  });

  init();
</script>

<style>
  /* --- PAGE LAYOUT --- */
  .tool-wrapper {
    max-width: 1300px; margin: 0 auto; padding: 60px 20px;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; color: #e2e8f0;
  }
  
  .header-section { text-align: center; margin-bottom: 50px; }
  .pro-badge { 
    background: linear-gradient(90deg, #facc15, #eab308); color: #000;
    font-size: 11px; font-weight: 900; padding: 4px 8px; border-radius: 4px;
    letter-spacing: 1px; display: inline-block; margin-bottom: 10px;
  }
  h1 { font-size: 3rem; margin: 0 0 10px 0; color: white; font-weight: 800; }
  p { color: #94a3b8; font-size: 1.1rem; }

  /* --- GRID --- */
  .editor-grid {
    display: grid; grid-template-columns: 40% 60%; gap: 30px;
    align-items: start;
  }
  @media (max-width: 900px) { .editor-grid { grid-template-columns: 1fr; } }

  /* --- LEFT: INPUT PANEL --- */
  .input-panel { display: flex; flex-direction: column; gap: 20px; }
  
  .panel-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 5px; }
  h3 { margin: 0; font-size: 1.1rem; color: #f8fafc; display: flex; align-items: center; gap: 8px; }
  
  .sm-btn {
    background: transparent; border: 1px solid #475569; color: #94a3b8;
    padding: 4px 10px; font-size: 12px; border-radius: 4px; cursor: pointer;
  }
  .sm-btn:hover { background: #334155; color: white; }

  .code-group { position: relative; }
  .label-row { position: absolute; right: 10px; top: 10px; z-index: 10; pointer-events: none; }
  .tag { 
    font-size: 10px; font-weight: bold; padding: 3px 8px; border-radius: 4px; 
    text-transform: uppercase; color: white;
  }
  .html { background: #e34c26; }
  .css { background: #264de4; }

  textarea {
    width: 100%; height: 250px;
    background: #0f172a; color: #a9b7c6;
    border: 1px solid #334155; border-radius: 12px;
    padding: 20px; font-family: 'Fira Code', 'Consolas', monospace; font-size: 14px;
    resize: vertical; outline: none; transition: border 0.2s;
    line-height: 1.5;
  }
  textarea:focus { border-color: #38bdf8; box-shadow: 0 0 0 3px rgba(56, 189, 248, 0.1); }

  /* --- RIGHT: PREVIEW PANEL --- */
  .preview-panel {
    background: #1e293b; border: 1px solid #334155;
    border-radius: 16px; padding: 25px;
    display: flex; flex-direction: column; gap: 20px;
    box-shadow: 0 20px 50px rgba(0,0,0,0.3);
  }

  .bg-toggle { display: flex; align-items: center; gap: 10px; font-size: 13px; color: #94a3b8; }
  .checkbox-label { display: flex; align-items: center; gap: 5px; cursor: pointer; }
  input[type="color"] { border: none; width: 24px; height: 24px; cursor: pointer; background: none; border-radius: 4px; overflow: hidden; }

  .canvas-wrapper {
    background-image: 
        linear-gradient(45deg, #2a3241 25%, transparent 25%), 
        linear-gradient(-45deg, #2a3241 25%, transparent 25%), 
        linear-gradient(45deg, transparent 75%, #2a3241 75%), 
        linear-gradient(-45deg, transparent 75%, #2a3241 75%);
    background-size: 20px 20px;
    background-position: 0 0, 0 10px, 10px -10px, -10px 0px;
    background-color: #1a202c; /* Checkerboard */
    border-radius: 12px;
    padding: 40px;
    min-height: 450px;
    display: flex; align-items: center; justify-content: center;
    overflow: auto; /* Allow scroll if content is huge */
    position: relative;
    border: 2px dashed #334155;
  }

  /* ‚úÖ FIXED CSS: Inline-block ensures box wraps tightly around content */
  .render-box {
    display: inline-block; 
    width: auto; height: auto;
    margin: 0; 
    box-sizing: border-box;
    position: relative;
  }

  /* --- EXPORT BAR --- */
  .export-bar {
    display: flex; justify-content: space-between; align-items: center;
    padding-top: 10px; border-top: 1px solid #334155;
  }
  
  .settings { display: flex; gap: 10px; }
  select {
    background: #0f172a; color: white; border: 1px solid #475569;
    padding: 10px; border-radius: 8px; cursor: pointer; outline: none;
  }

  .download-btn {
    background: linear-gradient(135deg, #dc2626, #b91c1c);
    color: white; border: none;
    padding: 12px 30px; font-size: 1rem; font-weight: bold;
    border-radius: 50px; cursor: pointer;
    box-shadow: 0 4px 15px rgba(220, 38, 38, 0.4);
    transition: all 0.2s;
  }
  .download-btn:hover { transform: translateY(-2px); box-shadow: 0 6px 20px rgba(220, 38, 38, 0.6); }
  .download-btn:active { transform: translateY(0); }

</style>
