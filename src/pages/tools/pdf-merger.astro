---
// src/pages/tools/pdf-merger.astro
import ToolLayout from '../../layouts/ToolLayout.astro';
import AdSlot from '../../components/AdSlot.astro';

// üåç GLOBAL SEO METADATA
const title = "Free PDF Merger - Combine PDF Files Online (Secure & Fast)";
const description = "Merge multiple PDF files into one document instantly. No upload limits, no watermarks. 100% Secure client-side processing for privacy.";
---

<ToolLayout 
  title={title} 
  description={description}
  toolName="PDF Merger"
>

  {/* ‚ö° FAQ SCHEMA */}
  <script type="application/ld+json" slot="head">
    {
      "@context": "https://schema.org",
      "@type": "FAQPage",
      "mainEntity": [{
        "@type": "Question",
        "name": "How to merge PDF files for free?",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "1. Select your PDF documents.\n2. Reorder them if needed.\n3. Click 'Merge PDF'.\n4. Download the combined file instantly."
        }
      }, {
        "@type": "Question",
        "name": "Is it safe to merge confidential PDFs?",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "Yes. Infinity PDF Merger operates entirely in your browser. Your files are never uploaded to any server, ensuring complete data privacy."
        }
      }]
    }
  </script>

  {/* Load PDF-Lib (Lightweight Library) */}
  <script is:inline src="https://unpkg.com/pdf-lib/dist/pdf-lib.min.js"></script>

  {/* 1. TOP AD SLOT */}
  <div class="mb-8">
    <AdSlot type="horizontal" />
  </div>

  <div class="space-y-8">
      
      {/* HEADER SECTION */}
      <div class="text-center max-w-2xl mx-auto">
        <h1 class="text-3xl md:text-5xl font-black text-gray-900 mb-3 tracking-tight">
           Merge <span class="text-transparent bg-clip-text bg-gradient-to-r from-red-600 to-pink-600">PDF Files</span>
        </h1>
        <p class="text-gray-500 text-lg">Combine unlimited PDFs into a single file. 100% Free & Secure.</p>
      </div>

      {/* STEP 1: UPLOAD */}
      <div id="uploadArea" class="py-16 text-center bg-white border-4 border-dashed border-red-200 rounded-3xl cursor-pointer hover:border-red-400 hover:shadow-xl transition relative group" onclick="document.getElementById('fileInput').click()">
          <div class="relative z-10">
            <div class="text-7xl mb-6 group-hover:scale-110 transition duration-200 drop-shadow-sm">üìë</div>
            <h3 class="text-2xl font-bold text-gray-800 mb-2">Drop PDF Files Here</h3>
            <p class="text-gray-500 mb-8">or click to browse from device</p>
            
            <span class="bg-red-600 text-white px-10 py-4 rounded-xl font-bold text-lg shadow-xl hover:bg-red-700 transition flex items-center justify-center gap-2 w-max mx-auto transform group-hover:-translate-y-1">
                <span>üìÇ</span> Select PDFs
            </span>
            
            <div class="mt-8 flex justify-center gap-6 text-xs font-bold text-gray-400 uppercase tracking-widest">
                <span class="flex items-center gap-1">üîí Private</span>
                <span class="flex items-center gap-1">‚ö° Instant</span>
                <span class="flex items-center gap-1">‚ôæÔ∏è Unlimited</span>
            </div>
          </div>
          <input type="file" id="fileInput" multiple accept=".pdf" class="hidden" />
      </div>

      {/* STEP 2: FILE LIST (Hidden initially) */}
      <div id="fileListArea" class="hidden animate-fade-in">
          
          <div class="flex justify-between items-center mb-6 px-2">
              <h4 class="font-bold text-gray-800 text-xl flex items-center gap-2">
                  <span>üìÑ</span> Files (<span id="count" class="text-red-600">0</span>)
              </h4>
              <div class="flex gap-2">
                  <button onclick="document.getElementById('fileInput').click()" class="text-sm font-bold bg-gray-100 text-gray-700 hover:bg-gray-200 px-4 py-2 rounded-lg transition">
                     + Add More
                  </button>
                  <button id="clearBtn" class="text-sm font-bold text-red-600 hover:bg-red-50 px-4 py-2 rounded-lg transition">
                     Clear All
                  </button>
              </div>
          </div>

          {/* List Container */}
          <div id="pdfList" class="space-y-3 mb-8">
              {/* Items injected via JS */}
          </div>

          {/* Merge Button */}
          <button id="mergeBtn" class="w-full bg-gradient-to-r from-red-600 to-pink-600 hover:from-red-700 hover:to-pink-700 text-white font-bold py-5 rounded-2xl shadow-xl hover:shadow-2xl hover:-translate-y-1 transition text-xl flex justify-center items-center gap-3">
              <span>üöÄ</span> Merge PDF Now
          </button>
      </div>

  </div>

  {/* 2. MIDDLE AD SLOT */}
  <div class="mb-8 mt-12">
     <AdSlot type="horizontal" />
  </div>

  {/* SEO CONTENT */}
  <div slot="content">
      
      {/* SECTION 1: GLOBAL APPEAL */}
      <div class="grid md:grid-cols-3 gap-6 mb-10 not-prose">
          <div class="bg-gray-50 p-6 rounded-2xl border border-gray-100">
              <div class="text-3xl mb-3">üîí</div>
              <h3 class="font-bold text-gray-900 mb-2">Secure Processing</h3>
              <p class="text-sm text-gray-600">Files stay on your device. We use browser-based technology for maximum privacy.</p>
          </div>
          <div class="bg-gray-50 p-6 rounded-2xl border border-gray-100">
              <div class="text-3xl mb-3">‚ö°</div>
              <h3 class="font-bold text-gray-900 mb-2">Lightning Fast</h3>
              <p class="text-sm text-gray-600">No upload waiting time. Merge dozens of files in milliseconds.</p>
          </div>
          <div class="bg-gray-50 p-6 rounded-2xl border border-gray-100">
              <div class="text-3xl mb-3">üì±</div>
              <h3 class="font-bold text-gray-900 mb-2">Mobile Ready</h3>
              <p class="text-sm text-gray-600">Works perfectly on iPhone, Android, Mac, and Windows without any app.</p>
          </div>
      </div>

      <h3 class="font-bold text-gray-800 text-xl mb-4">How to combine PDF files?</h3>
      <ol class="list-decimal pl-5 space-y-3 text-gray-700 mb-8">
          <li><strong>Select Files:</strong> Upload the PDF documents you want to join. You can select multiple files at once.</li>
          <li><strong>Reorder:</strong> Check the list. Add more files if needed.</li>
          <li><strong>Merge:</strong> Click on the "Merge PDF Now" button.</li>
          <li><strong>Download:</strong> Your unified PDF file will be ready for download instantly.</li>
      </ol>

      {/* SECTION 2: INDIAN USE CASES */}
      <div class="bg-blue-50 p-6 rounded-xl border-l-4 border-blue-500">
          <h4 class="font-bold text-blue-900 mb-2">üáÆüá≥ For Govt Job Aspirants</h4>
          <p class="text-sm text-blue-800">
              Applying for <strong>UPSC, SSC, or Banking Exams</strong>? Use this tool to merge your:
          </p>
          <ul class="mt-2 space-y-1 text-sm text-blue-700 list-disc pl-4">
              <li>Aadhar Card (Front + Back)</li>
              <li>10th & 12th Marksheets</li>
              <li>Multiple Semester Grade Cards</li>
          </ul>
      </div>
  </div>

</ToolLayout>

{/* üß† LOGIC */}
<script>
  // @ts-nocheck
  const fileInput = document.getElementById('fileInput');
  const uploadArea = document.getElementById('uploadArea');
  const fileListArea = document.getElementById('fileListArea');
  const pdfList = document.getElementById('pdfList');
  const countSpan = document.getElementById('count');
  const clearBtn = document.getElementById('clearBtn');
  const mergeBtn = document.getElementById('mergeBtn');

  let selectedFiles = [];

  // 1. File Selection
  fileInput?.addEventListener('change', (e) => {
      if (e.target.files && e.target.files.length > 0) {
          const newFiles = Array.from(e.target.files).filter(f => f.type === 'application/pdf');
          if(newFiles.length === 0) {
              alert("Please select valid PDF files only!");
              return;
          }
          selectedFiles = [...selectedFiles, ...newFiles];
          updateUI();
      }
  });

  function updateUI() {
      if (selectedFiles.length > 0) {
          uploadArea.classList.add('hidden');
          fileListArea.classList.remove('hidden');
      } else {
          uploadArea.classList.remove('hidden');
          fileListArea.classList.add('hidden');
      }

      countSpan.innerText = selectedFiles.length;
      pdfList.innerHTML = '';

      selectedFiles.forEach((file, index) => {
          const div = document.createElement('div');
          div.className = 'flex items-center justify-between bg-white p-4 rounded-xl border border-gray-200 shadow-sm transition hover:shadow-md hover:border-red-200';
          div.innerHTML = `
              <div class="flex items-center gap-4 overflow-hidden">
                  <div class="w-10 h-10 bg-red-50 text-red-600 rounded-lg flex items-center justify-center text-lg font-bold">
                      ${index + 1}
                  </div>
                  <div class="min-w-0">
                      <p class="text-sm font-bold text-gray-800 truncate">${file.name}</p>
                      <p class="text-xs text-gray-500 font-mono">${(file.size / 1024).toFixed(0)} KB</p>
                  </div>
              </div>
              <button onclick="window.removePdf(${index})" class="w-8 h-8 flex items-center justify-center rounded-full text-gray-400 hover:bg-red-100 hover:text-red-600 transition" title="Remove">‚úï</button>
          `;
          pdfList.appendChild(div);
      });
  }

  // 2. Remove File
  window.removePdf = (index) => {
      selectedFiles.splice(index, 1);
      updateUI();
  };

  // 3. Clear All
  clearBtn?.addEventListener('click', () => {
      selectedFiles = [];
      fileInput.value = '';
      updateUI();
  });

  // 4. Merge Logic (PDF-Lib)
  mergeBtn?.addEventListener('click', async () => {
      if (selectedFiles.length < 2) {
          alert("Please select at least 2 PDF files to merge.");
          return;
      }

      const originalText = mergeBtn.innerHTML;
      mergeBtn.innerHTML = "Processing... ‚è≥";
      mergeBtn.disabled = true;
      mergeBtn.classList.add('opacity-75', 'cursor-not-allowed');

      try {
          const { PDFDocument } = PDFLib;
          const mergedPdf = await PDFDocument.create();

          for (const file of selectedFiles) {
              const arrayBuffer = await file.arrayBuffer();
              const pdf = await PDFDocument.load(arrayBuffer);
              const copiedPages = await mergedPdf.copyPages(pdf, pdf.getPageIndices());
              copiedPages.forEach((page) => mergedPdf.addPage(page));
          }

          const pdfBytes = await mergedPdf.save();
          const blob = new Blob([pdfBytes], { type: 'application/pdf' });
          const link = document.createElement('a');
          link.href = URL.createObjectURL(blob);
          link.download = `Merged-File-${Date.now()}.pdf`;
          link.click();

          mergeBtn.innerHTML = "üéâ Merged Successfully!";
      } catch (error) {
          console.error(error);
          alert("Error merging PDFs. Encrypted files not supported.");
          mergeBtn.innerHTML = "Try Again ‚ùå";
      } finally {
          setTimeout(() => {
              mergeBtn.innerHTML = originalText;
              mergeBtn.disabled = false;
              mergeBtn.classList.remove('opacity-75', 'cursor-not-allowed');
          }, 3000);
      }
  });
</script>
