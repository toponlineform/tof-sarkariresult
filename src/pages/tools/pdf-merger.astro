---
import Layout from '../../layouts/Layout.astro';
import AdSlot from '../../components/AdSlot.astro';

const title = "Merge PDF Online Free - Combine Multiple PDFs into One";
const description = "Best Free PDF Merger for Government Job Aspirants. Combine multiple marksheets and documents into a single PDF file securely in your browser.";
---

<Layout title={title} description={description}>
  
  {/* Load PDF-Lib Library */}
  <script is:inline src="https://unpkg.com/pdf-lib/dist/pdf-lib.min.js"></script>

  <div class="max-w-5xl mx-auto px-4 py-10">
      
      {/* HEADER */}
      <div class="text-center mb-10">
          <span class="bg-red-100 text-red-700 text-xs font-bold px-3 py-1 rounded-full uppercase tracking-wider">Secure & Fast</span>
          <h1 class="text-3xl md:text-5xl font-extrabold text-gray-900 mt-3 mb-4">
              Infinity <span class="text-transparent bg-clip-text bg-gradient-to-r from-red-600 to-pink-600">PDF Merger</span>
          </h1>
          <p class="text-gray-500 text-lg max-w-2xl mx-auto">
              Combine your Marksheets, ID Proofs, and Certificates into a 
              <span class="font-bold text-gray-700">Single PDF File</span> for UPSC & SSC Forms.
          </p>
      </div>

      {/* ðŸŸ¢ AD SLOT 1: TOP (Horizontal) */}
      <div class="mb-8">
        <AdSlot type="horizontal" />
      </div>

      {/* ðŸ“‘ MAIN TOOL AREA (Full Width) */}
      <div class="bg-white border border-gray-200 rounded-2xl shadow-xl overflow-hidden relative p-6 md:p-12 mb-10">
          
          {/* STEP 1: UPLOAD */}
          <div id="uploadArea" class="text-center transition-all py-8">
              <div class="border-3 border-dashed border-red-200 bg-red-50 rounded-2xl p-12 hover:bg-red-100 transition cursor-pointer group max-w-2xl mx-auto" onclick="document.getElementById('fileInput').click()">
                  <div class="text-7xl mb-6 group-hover:scale-110 transition duration-300">ðŸ“‘</div>
                  <h3 class="text-3xl font-bold text-gray-800 mb-3">Select PDF Files</h3>
                  <p class="text-gray-500 text-lg">Click to select multiple PDF files from your device</p>
                  <p class="text-xs text-red-500 mt-6 font-bold uppercase tracking-wide bg-white inline-block px-3 py-1 rounded-full shadow-sm">100% Client Side â€¢ No Upload Limit</p>
              </div>
              <input type="file" id="fileInput" multiple accept=".pdf" class="hidden" />
          </div>

          {/* STEP 2: FILE LIST (Hidden initially) */}
          <div id="fileListArea" class="hidden mt-4 max-w-3xl mx-auto">
              <div class="flex justify-between items-center mb-6 border-b pb-4">
                  <h4 class="text-xl font-bold text-gray-800">Selected PDFs (<span id="count" class="text-red-600">0</span>)</h4>
                  <button id="clearBtn" class="text-sm text-red-600 font-bold hover:bg-red-50 px-3 py-1 rounded transition">Clear All</button>
              </div>

              {/* List Container */}
              <div id="pdfList" class="space-y-3 mb-8 max-h-[400px] overflow-y-auto pr-2 custom-scrollbar">
                  {/* Items injected via JS */}
              </div>

              {/* MERGE BUTTON */}
              <button id="mergeBtn" class="w-full bg-gradient-to-r from-red-600 to-pink-600 hover:from-red-700 hover:to-pink-700 text-white font-bold py-5 px-6 rounded-xl shadow-lg transform hover:-translate-y-1 transition-all text-xl flex justify-center items-center gap-3">
                  <span>ðŸš€</span> Merge PDF Now
              </button>
              
              <p class="text-center text-gray-400 text-sm mt-4">
                 Files are processed in your browser. No data is sent to server.
              </p>
          </div>
      </div>

      {/* ðŸŸ¢ AD SLOT 2: BOTTOM (Horizontal) */}
      <div class="mb-12">
        <AdSlot type="horizontal" />
      </div>

      {/* SEO CONTENT */}
      <div class="prose prose-red max-w-none bg-white p-8 rounded-2xl border border-gray-100 shadow-sm mx-auto">
          <h2 class="text-3xl font-bold text-gray-800">How to Merge PDF Files for Free?</h2>
          <p class="text-gray-600 text-lg">
              For exams like <strong>UPSC Civil Services, State PCS, and Banking</strong>, you are often required to upload a single document containing all your educational certificates. Scanning them separately creates multiple files.
          </p>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6 my-8 not-prose">
            <div class="bg-blue-50 p-6 rounded-xl border border-blue-100">
                <h3 class="font-bold text-blue-900 text-lg mb-2">âš¡ Super Fast</h3>
                <p class="text-blue-700">Merges files instantly using your device's power. No waiting for uploads.</p>
            </div>
            <div class="bg-green-50 p-6 rounded-xl border border-green-100">
                <h3 class="font-bold text-green-900 text-lg mb-2">ðŸ”’ 100% Secure</h3>
                <p class="text-green-700">Your documents (Marksheets/IDs) never leave your computer or phone.</p>
            </div>
          </div>

          <h3 class="text-xl font-bold text-gray-800">Steps to Combine PDFs:</h3>
          <ul class="list-disc pl-5 text-gray-700 space-y-2">
              <li>Click on <strong>Select PDF Files</strong>.</li>
              <li>Choose all the files (Marksheets, ID, etc.) you want to join.</li>
              <li>Review the list. You can remove unwanted files.</li>
              <li>Click <strong>Merge PDF Now</strong> to download the final file instantly.</li>
          </ul>
      </div>

  </div>

  <style>
    /* Custom Scrollbar for file list */
    .custom-scrollbar::-webkit-scrollbar {
        width: 6px;
    }
    .custom-scrollbar::-webkit-scrollbar-track {
        background: #f1f1f1;
    }
    .custom-scrollbar::-webkit-scrollbar-thumb {
        background: #d1d5db; 
        border-radius: 10px;
    }
  </style>

  {/* ðŸ§  JAVASCRIPT LOGIC */}
  <script>
      const fileInput = document.getElementById('fileInput');
      const uploadArea = document.getElementById('uploadArea');
      const fileListArea = document.getElementById('fileListArea');
      const pdfList = document.getElementById('pdfList');
      const countSpan = document.getElementById('count');
      const clearBtn = document.getElementById('clearBtn');
      const mergeBtn = document.getElementById('mergeBtn');

      let selectedFiles = [];

      fileInput.addEventListener('change', (e) => {
          if (e.target.files && e.target.files.length > 0) {
              const newFiles = Array.from(e.target.files).filter(f => f.type === 'application/pdf');
              if(newFiles.length === 0) {
                  alert("Please select only PDF files!");
                  return;
              }
              selectedFiles = [...selectedFiles, ...newFiles];
              updateUI();
          }
      });

      function updateUI() {
          if (selectedFiles.length > 0) {
              uploadArea.classList.add('hidden');
              fileListArea.classList.remove('hidden');
          } else {
              uploadArea.classList.remove('hidden');
              fileListArea.classList.add('hidden');
          }

          countSpan.innerText = selectedFiles.length;
          pdfList.innerHTML = '';

          selectedFiles.forEach((file, index) => {
              const div = document.createElement('div');
              div.className = 'flex items-center justify-between bg-gray-50 p-4 rounded-xl border border-gray-200 shadow-sm transition hover:shadow-md';
              div.innerHTML = `
                  <div class="flex items-center gap-4 overflow-hidden">
                      <div class="w-10 h-10 bg-white rounded-full flex items-center justify-center text-xl shadow-sm border">ðŸ“„</div>
                      <div class="min-w-0">
                          <p class="text-sm font-bold text-gray-800 truncate">${file.name}</p>
                          <p class="text-xs text-gray-500 font-mono">${(file.size / 1024).toFixed(0)} KB</p>
                      </div>
                  </div>
                  <button onclick="window.removeFile(${index})" class="w-8 h-8 flex items-center justify-center rounded-full text-gray-400 hover:bg-red-100 hover:text-red-600 transition">âœ•</button>
              `;
              pdfList.appendChild(div);
          });
      }

      window.removeFile = (index) => {
          selectedFiles.splice(index, 1);
          updateUI();
      };

      clearBtn.addEventListener('click', () => {
          selectedFiles = [];
          fileInput.value = '';
          updateUI();
      });

      mergeBtn.addEventListener('click', async () => {
          if (selectedFiles.length < 2) {
              alert("Please select at least 2 PDF files to merge.");
              return;
          }

          mergeBtn.innerText = "Processing...";
          mergeBtn.disabled = true;
          mergeBtn.classList.add('opacity-75', 'cursor-not-allowed');

          try {
              // @ts-ignore
              const { PDFDocument } = PDFLib;
              const mergedPdf = await PDFDocument.create();

              for (const file of selectedFiles) {
                  const arrayBuffer = await file.arrayBuffer();
                  const pdf = await PDFDocument.load(arrayBuffer);
                  const copiedPages = await mergedPdf.copyPages(pdf, pdf.getPageIndices());
                  copiedPages.forEach((page) => mergedPdf.addPage(page));
              }

              const pdfBytes = await mergedPdf.save();
              const blob = new Blob([pdfBytes], { type: 'application/pdf' });
              const link = document.createElement('a');
              link.href = URL.createObjectURL(blob);
              link.download = `TopOnlineForm-Merged-${Date.now()}.pdf`;
              link.click();

              mergeBtn.innerHTML = "<span>ðŸŽ‰</span> Merged Successfully!";
          } catch (error) {
              console.error(error);
              alert("Error merging PDFs. Ensure files are not password protected.");
              mergeBtn.innerText = "Try Again";
          } finally {
              setTimeout(() => {
                  mergeBtn.innerHTML = "<span>ðŸš€</span> Merge PDF Now";
                  mergeBtn.disabled = false;
                  mergeBtn.classList.remove('opacity-75', 'cursor-not-allowed');
              }, 3000);
          }
      });
  </script>
</Layout>
