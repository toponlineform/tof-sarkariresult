---
// src/pages/tools/typing-test.astro
import Layout from '../../layouts/Layout.astro';
import AdSlot from '../../components/AdSlot.astro';

// üöÄ SEO CONFIGURATION
const title = "Free Online Typing Test | Practice & Check Speed (WPM) - Typing Master";
const description = "Boost your typing speed with our Free Online Typing Test. Simulates TCS interface for SSC CGL, CHSL & Banking. Real-time WPM, Accuracy & Error check. Start now!";
const keywords = "typing test, online typing test, typing master, typing speed test, wpm checker, ssc typing practice, tcs typing interface, english typing test";

// üß† JSON-LD SCHEMA
const schemaMarkup = JSON.stringify({
  "@context": "https://schema.org",
  "@type": "SoftwareApplication",
  "name": "Infinity Typing Master",
  "operatingSystem": "Web",
  "applicationCategory": "EducationalApplication",
  "offers": {
    "@type": "Offer",
    "price": "0",
    "priceCurrency": "INR"
  },
  "description": "A free online typing test tool simulating TCS exam interface for SSC and Banking aspirants.",
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": "4.8",
    "ratingCount": "1250"
  }
});
---

<Layout title={title} description={description}>
  
  {/* Inject Schema & Keywords */}
  <script type="application/ld+json" set:html={schemaMarkup} slot="head" />
  <meta name="keywords" content={keywords} slot="head" />

  <div class="max-w-6xl mx-auto px-4 py-8">
      
      {/* HEADER */}
      <div class="text-center mb-8">
          <span class="bg-purple-100 text-purple-700 text-xs font-bold px-3 py-1 rounded-full uppercase tracking-wider">Free Typing Speed Test</span>
          <h1 class="text-3xl md:text-5xl font-extrabold text-gray-900 mt-3 mb-4">
              Infinity <span class="text-transparent bg-clip-text bg-gradient-to-r from-purple-600 to-indigo-600">Typing Master</span>
          </h1>
          <p class="text-gray-500 text-lg max-w-2xl mx-auto">
              The best <strong>Online Typing Test</strong> to practice for SSC CGL, CHSL & Banking exams. 
              Check your <span class="text-purple-600 font-bold">WPM (Words Per Minute)</span> accurately with our TCS-style interface.
          </p>
      </div>

      {/* üü¢ TOP AD */}
      <div class="mb-8">
        <AdSlot type="horizontal" />
      </div>

      {/* ‚å®Ô∏è MAIN TYPING AREA */}
      <main class="w-full">
          
          {/* EXAM INTERFACE BOX */}
          <div class="bg-white border border-gray-300 rounded-lg shadow-lg overflow-hidden relative mb-8">
              
              {/* Exam Header (Blue Bar like TCS) */}
              <div class="bg-[#1e40af] text-white p-3 flex justify-between items-center text-sm shadow-md">
                  <div class="font-bold flex items-center gap-2">
                      <span>üñ•Ô∏è</span> System: C001
                  </div>
                  <div class="flex items-center gap-4">
                      <span id="timer" class="font-mono text-xl font-bold bg-black px-3 py-1 rounded text-yellow-400 border border-white shadow-inner">02:00</span>
                      <button id="startBtn" class="bg-green-500 hover:bg-green-600 text-white px-6 py-1.5 rounded font-bold transition shadow-lg border-b-4 border-green-700 active:border-b-0 active:translate-y-1">Start Test</button>
                  </div>
              </div>

              {/* Settings Bar */}
              <div class="bg-gray-100 p-3 border-b border-gray-300 grid grid-cols-1 md:grid-cols-3 gap-4 text-sm items-center">
                  
                  {/* Passage Selector */}
                  <div class="flex flex-col">
                      <label class="text-xs font-bold text-gray-500 mb-1">Select Passage</label>
                      <select id="passageSelect" class="border border-gray-300 rounded p-1.5 text-gray-800 font-medium focus:ring-2 focus:ring-purple-500 outline-none">
                          {/* Options injected via JS */}
                      </select>
                  </div>

                  {/* Time Selector */}
                  <div class="flex flex-col">
                      <label class="text-xs font-bold text-gray-500 mb-1">Duration</label>
                      <select id="timeSelect" class="border border-gray-300 rounded p-1.5 text-gray-800 font-medium focus:ring-2 focus:ring-purple-500 outline-none">
                          <option value="1">1 Minute (Warmup)</option>
                          <option value="2" selected>2 Minutes (Standard)</option>
                          <option value="5">5 Minutes (Full Exam)</option>
                          <option value="10">10 Minutes (Endurance)</option>
                          <option value="15">15 Minutes (SSC CGL)</option>
                      </select>
                  </div>

                  {/* Backspace Toggle */}
                  <div class="flex items-center gap-2 bg-white p-2 rounded border border-gray-200">
                      <input type="checkbox" id="disableBackspace" class="w-4 h-4 text-purple-600 focus:ring-purple-500 rounded cursor-pointer">
                      <label for="disableBackspace" class="font-bold text-gray-700 cursor-pointer text-xs md:text-sm select-none">Disable Backspace (SSC Mode)</label>
                  </div>
              </div>

              {/* Typing Area */}
              <div class="p-4 md:p-6 bg-[#f0f9ff]">
                  
                  {/* Text to Type */}
                  <div id="quoteDisplay" class="bg-white border-2 border-gray-300 p-4 rounded-lg mb-4 text-lg font-mono leading-relaxed h-48 overflow-hidden text-gray-500 select-none relative shadow-inner">
                      {/* Text Injected Here */}
                  </div>

                  {/* User Input */}
                  <textarea 
                      id="quoteInput" 
                      class="w-full h-40 p-4 border-2 border-gray-300 rounded-lg focus:outline-none focus:border-purple-500 focus:ring-4 focus:ring-purple-100 font-mono text-lg leading-relaxed shadow-sm bg-white disabled:bg-gray-100 disabled:cursor-not-allowed resize-none"
                      placeholder="Click 'Start Test' and start typing here..."
                      disabled
                      spellcheck="false"
                      autocomplete="off"
                      onpaste="return false"
                  ></textarea>
              </div>

              {/* Live Stats Footer */}
              <div class="bg-gray-800 text-white p-4 flex justify-around text-center border-t-4 border-purple-500">
                  <div>
                      <div class="text-[10px] md:text-xs text-gray-400 uppercase tracking-widest font-bold">Net Speed</div>
                      <div class="text-2xl md:text-3xl font-extrabold text-yellow-400 font-mono"><span id="wpm">0</span> WPM</div>
                  </div>
                  <div>
                      <div class="text-[10px] md:text-xs text-gray-400 uppercase tracking-widest font-bold">Accuracy</div>
                      <div class="text-2xl md:text-3xl font-extrabold text-green-400 font-mono"><span id="accuracy">100</span>%</div>
                  </div>
                  <div>
                      <div class="text-[10px] md:text-xs text-gray-400 uppercase tracking-widest font-bold">Errors</div>
                      <div class="text-2xl md:text-3xl font-extrabold text-red-400 font-mono"><span id="errors">0</span></div>
                  </div>
              </div>
          </div>

          {/* RESULT POPUP (Hidden) */}
          <div id="resultModal" class="hidden fixed inset-0 bg-black/80 z-50 flex items-center justify-center p-4 backdrop-blur-md">
              <div class="bg-white rounded-2xl p-8 max-w-md w-full text-center shadow-2xl transform scale-100 border-4 border-purple-600 relative animate-fade-in">
                  
                  <div class="text-6xl mb-4 animate-bounce">üèÜ</div>
                  <h2 class="text-3xl font-extrabold text-gray-800 mb-2">Time Up!</h2>
                  <p class="text-gray-500 mb-8">Great job! Here is your performance report.</p>
                  
                  <div class="grid grid-cols-2 gap-4 mb-8">
                      <div class="bg-blue-50 p-4 rounded-xl border border-blue-100">
                          <div class="text-4xl font-extrabold text-blue-600" id="finalWpm">0</div>
                          <div class="text-xs uppercase font-bold text-gray-500 mt-1">Net Speed (WPM)</div>
                      </div>
                      <div class="bg-green-50 p-4 rounded-xl border border-green-100">
                          <div class="text-4xl font-extrabold text-green-600" id="finalAcc">0%</div>
                          <div class="text-xs uppercase font-bold text-gray-500 mt-1">Accuracy</div>
                      </div>
                  </div>

                  <div class="flex gap-4">
                    <button onclick="location.reload()" class="flex-1 bg-gray-200 hover:bg-gray-300 text-gray-700 font-bold py-3 rounded-xl transition">
                        Exit
                    </button>
                    <button id="retryBtn" class="flex-1 bg-purple-600 hover:bg-purple-700 text-white font-bold py-3 rounded-xl shadow-lg transition transform hover:-translate-y-1">
                        Try Again ‚ü≥
                    </button>
                  </div>
              </div>
          </div>

          {/* üü¢ BOTTOM ADVERTISEMENT (High Visibilty after test) */}
          <div class="mb-10">
            <AdSlot type="horizontal" />
          </div>

          {/* SEO OPTIMIZED CONTENT SECTION */}
          <article class="prose prose-purple max-w-none bg-white p-6 md:p-8 rounded-xl border border-gray-100 shadow-sm">
              <h2 class="text-2xl font-bold text-gray-900">Why Use Infinity Typing Master?</h2>
              <p class="text-gray-700">
                  Welcome to the ultimate <strong>Online Typing Test</strong> platform. Whether you are preparing for government exams or just want to improve your keyboard skills, our tool offers a realistic environment to help you succeed. It is designed as a free alternative to paid software like <em>Typing Master</em> and <em>Sony Typing Tutor</em>.
              </p>

              <h3 class="text-xl font-bold text-gray-800 mt-6">Key Features</h3>
              <ul class="list-disc pl-5 space-y-2 text-gray-700">
                  <li><strong>Real Exam Interface:</strong> We simulate the actual interface used by TCS iON for exams like SSC CGL, CHSL, MTS, and RRB NTPC.</li>
                  <li><strong>Accurate WPM Calculator:</strong> Unlike other tools, we calculate 'Net Speed' based on the SSC formula (5 keystrokes = 1 word).</li>
                  <li><strong>Instant Result Analysis:</strong> Get a detailed report of your Gross Speed, Net Speed, Accuracy, and Total Errors immediately after the test.</li>
                  <li><strong>Mobile & Desktop Friendly:</strong> Practice typing anywhere, anytime on any device.</li>
              </ul>

              <h3 class="text-xl font-bold text-gray-800 mt-6">How to Calculate Typing Speed (WPM)?</h3>
              <p class="text-gray-700">
                  Most government exams follow a specific formula. Here is how we calculate your score:
              </p>
              <div class="bg-gray-50 p-4 rounded-lg border-l-4 border-purple-500 my-4">
                  <p><strong>Step 1:</strong> Count total characters typed (including spaces).</p>
                  <p><strong>Step 2:</strong> Divide total characters by 5 to get "Gross Words".</p>
                  <p><strong>Step 3:</strong> Formula: <code class="bg-gray-200 px-1 rounded">Net Speed (WPM) = (Gross Words - Errors) / Time in Minutes</code></p>
              </div>

              {/* FAQs */}
              <h3 class="text-xl font-bold text-gray-800 mt-8 mb-4">Frequently Asked Questions</h3>
              
              <div class="space-y-4">
                  <details class="group bg-gray-50 p-4 rounded-lg cursor-pointer">
                      <summary class="font-bold text-gray-900 list-none flex justify-between items-center">
                          <span>Is this typing test free?</span>
                          <span class="transition group-open:rotate-180">‚ñº</span>
                      </summary>
                      <p class="text-gray-700 mt-2">Yes, Infinity Typing Master is 100% free. You can take unlimited typing tests to improve your speed.</p>
                  </details>

                  <details class="group bg-gray-50 p-4 rounded-lg cursor-pointer">
                      <summary class="font-bold text-gray-900 list-none flex justify-between items-center">
                          <span>What is a good typing speed for SSC exams?</span>
                          <span class="transition group-open:rotate-180">‚ñº</span>
                      </summary>
                      <p class="text-gray-700 mt-2">For SSC CGL and CHSL, a speed of <strong>27 to 30 WPM</strong> is typically required to qualify. However, aiming for 35+ WPM is recommended for safety.</p>
                  </details>

                  <details class="group bg-gray-50 p-4 rounded-lg cursor-pointer">
                      <summary class="font-bold text-gray-900 list-none flex justify-between items-center">
                          <span>Does backspace work in the actual exam?</span>
                          <span class="transition group-open:rotate-180">‚ñº</span>
                      </summary>
                      <p class="text-gray-700 mt-2">It depends on the specific exam. In SSC CGL/CHSL, backspace is generally allowed. However, some departmental exams disable it. Our tool has a "Disable Backspace" toggle so you can practice for both scenarios.</p>
                  </details>
              </div>
          </article>
      </main>
  </div>

  {/* üß† TYPING ENGINE LOGIC */}
  <script>
      // @ts-nocheck
      // 10 LONG PASSAGES FOR SSC PRACTICE
      const TEST_DATA = [
          {
              title: "Passage 1: Digital India",
              text: "Digital India is a campaign launched by the Government of India to ensure the Government's services are made available to citizens electronically by improved online infrastructure and by increasing Internet connectivity or making the country digitally empowered in the field of technology. The initiative includes plans to connect rural areas with high-speed internet networks. Digital India consists of three core components: the development of secure and stable digital infrastructure, delivering government services digitally, and universal digital literacy. The program aims to reduce paperwork and improve efficiency in public services. With the rise of smartphones and cheap data, millions of Indians are now coming online for the first time. This digital revolution is transforming sectors like education, healthcare, and banking, making services accessible to the remotest corners of the country."
          },
          {
              title: "Passage 2: Environmental Protection",
              text: "Environmental protection is the practice of protecting the natural environment by individuals, organizations and governments. Its objectives are to conserve natural resources and the existing natural environment and, where possible, to repair damage and reverse trends. Due to the pressures of overconsumption, population growth and technology, the biophysical environment is being degraded, sometimes permanently. This has been recognized, and governments have begun placing restraints on activities that cause environmental degradation. Waste management, recycling, and the use of renewable energy sources like solar and wind power are critical steps towards a sustainable future. We must reduce our carbon footprint to combat climate change, which poses a severe threat to biodiversity and human survival."
          },
          {
              title: "Passage 3: History of Indian Railways",
              text: "The history of Indian Railways dates back to 1853, when the first train ran between Bombay and Thane. Since then, it has grown to become one of the largest railway networks in the world. Indian Railways plays a crucial role in the country's economy by transporting millions of passengers and tons of freight daily. It is often referred to as the lifeline of the nation. Over the years, the railways have undergone significant modernization, including the introduction of electric locomotives, high-speed trains like Vande Bharat, and improved safety measures. The network connects diverse cultures and regions, facilitating trade and tourism. Despite challenges like congestion and maintenance, Indian Railways continues to be a symbol of national integration and engineering marvel."
          },
          {
              title: "Passage 4: Artificial Intelligence",
              text: "Artificial Intelligence (AI) refers to the simulation of human intelligence in machines that are programmed to think like humans and mimic their actions. The term may also be applied to any machine that exhibits traits associated with a human mind such as learning and problem-solving. The ideal characteristic of artificial intelligence is its ability to rationalize and take actions that have the best chance of achieving a specific goal. AI is being used in various fields such as healthcare, finance, robotics, and gaming. While AI offers immense benefits like automation and precision, it also raises ethical concerns regarding privacy and job displacement. As technology advances, it is essential to develop regulations that ensure the responsible use of AI for the betterment of humanity."
          },
          {
              title: "Passage 5: Importance of Education",
              text: "Education is a fundamental human right and a powerful tool for sustainable development. It empowers individuals with knowledge, skills, and values necessary to lead a productive life. Education fosters critical thinking, creativity, and innovation, which are essential for economic growth and social progress. It helps in eradicating poverty, reducing inequality, and promoting peace and stability. In India, the Right to Education Act guarantees free and compulsory education to all children between the ages of 6 and 14. However, challenges like lack of infrastructure, teacher shortage, and quality of education remain. Investing in education is investing in the future, as it equips the youth to face global challenges and contribute to nation-building."
          },
          {
              title: "Passage 6: Impact of Social Media",
              text: "Social media has revolutionized the way we communicate and share information. Platforms like Facebook, Twitter, and Instagram allow people to connect with friends and family, share opinions, and access news instantly across the globe. It has democratized information and given a voice to the voiceless. However, social media also has a dark side. Issues like cyberbullying, fake news, and addiction are growing concerns. The algorithmic nature of these platforms can create echo chambers, polarizing public opinion. It is crucial for users to practice digital hygiene and verify information before sharing. Despite its drawbacks, social media remains a potent tool for social change, marketing, and networking in the modern world."
          },
          {
              title: "Passage 7: Health and Yoga",
              text: "Yoga is an ancient physical, mental and spiritual practice that originated in India. The word 'yoga' derives from Sanskrit and means to join or to unite, symbolizing the union of body and consciousness. Today it is practiced in various forms around the world and continues to grow in popularity. Recognizing its universal appeal, the United Nations proclaimed 21 June as the International Day of Yoga. Yoga is not just about exercise; it is a way to discover the sense of oneness with yourself, the world and the nature. Regular practice of yoga improves flexibility, builds muscle strength, perfects posture, protects your spine, and increases blood flow. In a fast-paced world filled with stress, yoga provides a sanctuary of peace and well-being."
          },
          {
              title: "Passage 8: Indian Space Research (ISRO)",
              text: "The Indian Space Research Organisation (ISRO) is the space agency of the Government of India. Established in 1969, ISRO has achieved numerous milestones in space technology. Its primary objective is to use space technology for national development while pursuing space science research and planetary exploration. ISRO is known for its cost-effective missions. The success of Chandrayaan missions to the Moon and the Mars Orbiter Mission (Mangalyaan) has placed India among the elite group of space-faring nations. ISRO also launches satellites for communication, weather forecasting, and navigation, benefiting sectors like agriculture and disaster management. The upcoming Gaganyaan mission aims to send Indian astronauts into space, marking a new chapter in India's space history."
          },
          {
              title: "Passage 9: Democracy in India",
              text: "India is the largest democracy in the world. Democracy implies a system of government by the whole population or all the eligible members of a state, typically through elected representatives. The Constitution of India, adopted in 1950, lays the foundation for a democratic republic, ensuring justice, liberty, equality, and fraternity. Regular elections, an independent judiciary, and a free press are the pillars of Indian democracy. It allows citizens to participate in the decision-making process and hold the government accountable. While democracy in India faces challenges like corruption and communalism, the vibrant participation of its diverse population in the electoral process demonstrates the strength and resilience of its democratic institutions."
          },
          {
              title: "Passage 10: Sports and Discipline",
              text: "Sports play a vital role in the holistic development of an individual. Apart from physical fitness, sports inculcate values like discipline, teamwork, patience, and perseverance. Participating in sports teaches one how to handle both victory and defeat with grace. It builds character and leadership skills. In recent years, India has seen a surge in sporting culture with the success of leagues like the IPL and the improved performance of athletes in the Olympics and Commonwealth Games. The government's initiatives like 'Khelo India' aim to identify and nurture talent at the grassroots level. Encouraging sports in schools and colleges is essential to build a healthy and active nation."
          }
      ];

      const quoteDisplay = document.getElementById('quoteDisplay');
      const quoteInput = document.getElementById('quoteInput');
      const timerElement = document.getElementById('timer');
      const startBtn = document.getElementById('startBtn');
      const retryBtn = document.getElementById('retryBtn');
      const wpmElement = document.getElementById('wpm');
      const accuracyElement = document.getElementById('accuracy');
      const errorsElement = document.getElementById('errors');
      const resultModal = document.getElementById('resultModal');
      const finalWpm = document.getElementById('finalWpm');
      const finalAcc = document.getElementById('finalAcc');
      const disableBackspace = document.getElementById('disableBackspace');
      const timeSelect = document.getElementById('timeSelect');
      const passageSelect = document.getElementById('passageSelect');

      let timeLeft = 60;
      let timeElapsed = 0;
      let timer = null;
      let errors = 0;
      let isPlaying = false;
      let currentQuote = "";
      let totalTypedChars = 0;

      // Populate Passage Select
      TEST_DATA.forEach((data, index) => {
          const option = document.createElement('option');
          option.value = index;
          option.text = data.title;
          passageSelect.appendChild(option);
      });

      // Load Initial Text (Without starting)
      loadPassageText();

      passageSelect.addEventListener('change', loadPassageText);
      retryBtn.addEventListener('click', () => {
          resultModal.classList.add('hidden');
          startGame();
      });

      function loadPassageText() {
          const index = passageSelect.value;
          currentQuote = TEST_DATA[index].text;
          
          // Make text longer if needed
          if(currentQuote.length < 1000) {
             currentQuote = currentQuote + " " + currentQuote + " " + currentQuote; 
          }

          quoteDisplay.innerHTML = '';
          currentQuote.split('').forEach(char => {
              const charSpan = document.createElement('span');
              charSpan.innerText = char;
              quoteDisplay.appendChild(charSpan);
          });
          quoteDisplay.scrollTop = 0; // Reset scroll
      }

      // Initialize Game
      startBtn.addEventListener('click', startGame);

      function startGame() {
          if(isPlaying) return;
          
          // Reset Stats
          const selectedTime = parseInt(timeSelect.value);
          timeLeft = selectedTime * 60;
          timeElapsed = 0;
          errors = 0;
          totalTypedChars = 0;
          isPlaying = true;
          
          // UI Updates
          loadPassageText(); // Reload fresh text
          quoteInput.disabled = false;
          quoteInput.value = "";
          quoteInput.focus();
          startBtn.innerText = "Running...";
          startBtn.classList.add('opacity-50', 'cursor-not-allowed');
          resultModal.classList.add('hidden');

          // Disable selectors during test
          passageSelect.disabled = true;
          timeSelect.disabled = true;

          // Start Timer
          timer = setInterval(updateTimer, 1000);
      }

      function updateTimer() {
          if (timeLeft > 0) {
              timeLeft--;
              timeElapsed++;
              
              // Format Timer
              let minutes = Math.floor(timeLeft / 60);
              let seconds = timeLeft % 60;
              timerElement.innerText = `${minutes < 10 ? '0' + minutes : minutes}:${seconds < 10 ? '0' + seconds : seconds}`;
              
              updateStats();
          } else {
              finishGame();
          }
      }

      function updateStats() {
          const typedText = quoteInput.value;
          const wpm = Math.round((typedText.length / 5) / (timeElapsed / 60));
          wpmElement.innerText = (!wpm || wpm < 0 || !isFinite(wpm)) ? 0 : wpm;
          
          const accuracy = totalTypedChars > 0 ? Math.round(((totalTypedChars - errors) / totalTypedChars) * 100) : 100;
          accuracyElement.innerText = accuracy;
          errorsElement.innerText = errors;
      }

      function finishGame() {
          clearInterval(timer);
          isPlaying = false;
          quoteInput.disabled = true;
          startBtn.innerText = "Start Test";
          startBtn.classList.remove('opacity-50', 'cursor-not-allowed');
          
          // Enable selectors
          passageSelect.disabled = false;
          timeSelect.disabled = false;

          // Show Result
          finalWpm.innerText = wpmElement.innerText;
          finalAcc.innerText = accuracyElement.innerText;
          resultModal.classList.remove('hidden');
      }

      // Handle Typing & Scrolling
      quoteInput.addEventListener('input', () => {
          if(!isPlaying) return;

          const arrayQuote = quoteDisplay.querySelectorAll('span');
          const arrayValue = quoteInput.value.split('');
          totalTypedChars = arrayValue.length;

          let currentErrors = 0;

          // Highlight Logic
          arrayQuote.forEach((characterSpan, index) => {
              const character = arrayValue[index];
              if (character == null) {
                  characterSpan.classList.remove('text-green-600', 'bg-green-100', 'text-red-600', 'bg-red-100'); 
              } else if (character === characterSpan.innerText) {
                  characterSpan.classList.add('text-green-600', 'bg-green-100');
                  characterSpan.classList.remove('text-red-600', 'bg-red-100');
              } else {
                  characterSpan.classList.remove('text-green-600', 'bg-green-100');
                  characterSpan.classList.add('text-red-600', 'bg-red-100');
                  currentErrors++;
              }
          });
          
          errors = currentErrors;

          // Scroll Logic
          const currentIndex = arrayValue.length;
          if(currentIndex < arrayQuote.length) {
              const activeSpan = arrayQuote[currentIndex];
              const spanTop = activeSpan.offsetTop;
              const containerHeight = quoteDisplay.clientHeight;
              const scrollTop = quoteDisplay.scrollTop;

              if (spanTop > scrollTop + (containerHeight / 2)) {
                  quoteDisplay.scrollTo({
                      top: spanTop - (containerHeight / 3),
                      behavior: 'smooth'
                  });
              }
          }
      });

      // Handle Backspace Disable
      quoteInput.addEventListener('keydown', (e) => {
          if (disableBackspace.checked && e.key === 'Backspace') {
              e.preventDefault();
          }
      });
  </script>

</Layout>
