---
import Layout from '../layouts/Layout.astro';
import AdSlot from '../components/AdSlot.astro';
import { allPosts } from '../data/index.js';

// --- üß† SERVER SIDE LOGIC ---

// 1. Helper Function: Date Parser (Code Repetition Bachane ke liye)
const parseJobDate = (post) => {
    const dateObj = post.importantDates?.find(d => 
        d.label.toLowerCase().includes('last date') || 
        d.label.toLowerCase().includes('closing date')
    );
    
    if (!dateObj) return null;

    // "25/12/2025 (5:00 PM)" -> "25/12/2025"
    const cleanDate = dateObj.value.replace(/ \(.*\)/, '').trim();
    const parts = cleanDate.split(/[/-]/);
    
    if (parts.length !== 3) return null;
    
    // Convert to Timestamp number for easy math
    return new Date(`${parts[2]}-${parts[1]}-${parts[0]}`).getTime();
};

const getActiveJobs = () => {
  const today = new Date();
  today.setHours(0, 0, 0, 0); // Aaj raat 12 baje tak valid rahega
  const todayTimestamp = today.getTime();

  // 2. Filter & Map (Ek saath data prepare karo)
  const active = allPosts
    .filter(post => {
        // Sirf Jobs aur Admission chahiye
        if (post.category !== 'Latest Jobs' && post.category !== 'Admission') return false;
        
        const jobTime = parseJobDate(post);
        // Agar date nahi hai, toh Active maano (Safe side) OR Date future me honi chahiye
        return jobTime === null || jobTime >= todayTimestamp;
    })
    .sort((a, b) => {
        const dateA = parseJobDate(a) || 9999999999999; // Date nahi hai toh sabse neeche
        const dateB = parseJobDate(b) || 9999999999999;
        return dateA - dateB; // Jo pehle khatam ho raha hai wo upar
    });

  return active;
};

const activePosts = getActiveJobs();
---

