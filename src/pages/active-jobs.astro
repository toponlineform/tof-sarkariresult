          <div class="grid grid-cols-[90px_1fr] md:grid-cols-[120px_1fr] bg-[#f1f1f1] border-b border-gray-300 text-xs md:text-sm font-bold text-gray-700 uppercase">
            <div class="p-3 border-r border-gray-300 text-center flex items-center justify-center">Last Date</div>
            <div class="p-3 pl-4">Post Name / Details</div>
          </div>

          {/* JOB LIST */}
          <div id="jobListContainer">
            {activePosts.length > 0 ? (
              activePosts.map((post) => {
                // Display Date nikalne ke liye simple logic
                let lastDateVal = post.importantDates?.find(d => d.label.toLowerCase().includes('last date'))?.value || "Check Notice";
                lastDateVal = lastDateVal.replace(/ \(.*\)/, '').trim();

                return (
                  <div class="job-row grid grid-cols-[90px_1fr] md:grid-cols-[120px_1fr] border-b border-gray-200 hover:bg-yellow-50 transition group">
                    
                    {/* Date Column */}
                    <div class="p-3 border-r border-gray-200 text-center flex flex-col justify-center text-[11px] md:text-xs font-bold text-red-600 bg-gray-50 group-hover:bg-yellow-50">
                      <span>{lastDateVal}</span>
                    </div>

                    {/* Title Column */}
                    <div class="p-3 pl-4 flex items-center">
                      <a href={`/${post.slug}`} class="text-[#1a56db] font-bold text-xs md:text-sm hover:underline leading-tight block">
                        {post.shortTitle || post.title}
                        
                        {post.category === 'Admission' && (
                            <span class="ml-2 text-[10px] font-bold uppercase bg-orange-100 text-orange-700 px-2 py-0.5 rounded border border-orange-200 inline-block align-middle">
                                Admission
                            </span>
                        )}
                      </a>
                    </div>
                  </div>
                );
              })
            ) : (
              <div class="text-center py-10 text-gray-500 text-sm">
                No Active Jobs Found currently.
              </div>
            )}
          </div>

          {/* No Results Msg */}
