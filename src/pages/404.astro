---
// File: src/pages/404.astro
import Layout from '../layouts/Layout.astro';
---

<Layout title="Page Not Available">
  
  <div class="min-h-[80vh] flex flex-col items-center justify-center text-center px-4 bg-white">
    
    <div class="mb-6 relative">
      <div class="w-40 h-40 bg-blue-50 rounded-full flex items-center justify-center mx-auto">
         <span class="text-7xl">ğŸ”</span>
      </div>
      <div class="absolute -bottom-2 -right-2 bg-yellow-400 text-blue-900 text-xs font-bold px-3 py-1 rounded-full shadow-sm border border-white">
        Error 404
      </div>
    </div>

    <h1 class="text-xl md:text-2xl font-medium text-gray-800 mb-2">
      Ye page available nahi hai. Sorry about that.
    </h1>
    <p class="text-gray-500 text-sm mb-8">
      Kuch aur search karke dekhein?
    </p>

    <div class="flex items-center gap-3 w-full max-w-md mx-auto">
        
        <span class="hidden md:block font-bold text-blue-900 tracking-tighter text-xl">
            TOF<span class="text-red-600">.</span>
        </span>

        <form action="/search" method="get" class="flex-1 flex shadow-sm">
            <input 
                type="text" 
                name="q"
                placeholder="Search jobs, admit cards..." 
                class="w-full px-4 py-2.5 border border-gray-300 rounded-l-md focus:outline-none focus:border-blue-500 text-gray-700"
            />
            <button type="submit" class="bg-gray-100 border border-l-0 border-gray-300 px-5 py-2.5 rounded-r-md hover:bg-gray-200 transition-colors">
                ğŸ”
            </button>
        </form>
    </div>

    <div class="mt-12 space-x-4 text-sm text-blue-700 font-medium">
        <a href="/" class="hover:underline">Home</a>
        <span class="text-gray-300">|</span>
        <a href="/latest-jobs" class="hover:underline">Latest Jobs</a>
        <span class="text-gray-300">|</span>
        <a href="/contact" class="hover:underline">Contact Us</a>
    </div>

  </div>

</Layout>
