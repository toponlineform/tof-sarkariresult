import Layout from '../layouts/Layout.astro';
// âœ… 1. Manual Boxes Config
import { homeBoxes } from '../data/home/index.js';
// âœ… 2. Master Data (Automatic ke liye zaroori hai)
import { allPosts } from '../data/index.js';

// --- ðŸ§  HYBRID LOGIC ENGINE (Auto + Manual + Limit Control) ---
const getBoxLinks = (box) => {
  // Agar Box MANUAL mode me hai (auto: false ya undefined)
  if (!box.auto) {
    return box.links;
  }

  // --- AUTOMATIC MODE START ---
  
  // 1. Data Filter karo (Category match karke)
  const filtered = allPosts.filter(post => post.category === box.categoryName);
  
  // 2. Sort karo (Newest First)
  filtered.sort((a, b) => {
      const parseDate = (dateStr) => {
          if (!dateStr) return 0;
          const parts = dateStr.split('/');
          return new Date(`${parts[2]}-${parts[1]}-${parts[0]}`).getTime();
      };
      const timeA = parseDate(a.postDate);
      const timeB = parseDate(b.postDate);
      
      if (timeB !== timeA) return timeB - timeA; // Date Priority
      return (b.id || 0) - (a.id || 0); // ID Priority (Backup)
  });

  // 3. LIMIT LOGIC (Aapki Demand: Top row = 30, Bottom row = 10)
  // Top Row IDs: latest-jobs, admit-card, results
  const topRowIds = ['latest-jobs', 'admit-card', 'results'];
  const limit = topRowIds.includes(box.id) ? 30 : 10;

  // 4. Data Return karo (Format karke)
  return filtered.slice(0, limit).map(post => ({
    title: post.shortTitle || post.title, 
    url: `/job/${post.slug}`,
    tag: post.tag, // Master Data se tag uthayega
    tagColor: post.tagColor || "green",
    emoji: post.emoji || null // Agar emoji hai to wo bhi
  }));
};
