---
import Layout from '../layouts/Layout.astro';
// âœ… Manual Boxes Config
import { homeBoxes } from '../data/home/index.js';
// âœ… Master Data
import { allPosts } from '../data/index.js';

// âœ… Import Tools
import { toolsList } from './tools/tools.js';

// --- ðŸ“… DYNAMIC DATE CONFIG ---
const currentYear = new Date().getFullYear();
const nextYear = currentYear + 1; 
const todayDate = new Date().toLocaleDateString('en-IN', { day: 'numeric', month: 'short', year: 'numeric' });

// --- ðŸ§  HYBRID LOGIC ENGINE ---
const getBoxLinks = (box) => {
  // Error handling: Agar allPosts load nahi hua to crash nahi hoga
  if (!allPosts) return []; 
  if (!box.auto) return box.links;

  const filtered = allPosts.filter(post => post.category === box.categoryName);
   
  filtered.sort((a, b) => {
      const parseDate = (dateStr) => {
          if (!dateStr) return 0;
          try {
            const cleanDate = String(dateStr).trim();
            const parts = cleanDate.split('/');
            if (parts.length !== 3) return 0; 
            return new Date(`${parts[2]}-${parts[1]}-${parts[0]}`).getTime();
          } catch (e) { return 0; }
      };

      let dateA = 0, dateB = 0;

      // Smart Sorting based on Box Type
      if (box.id === 'admit-card') {
          dateA = parseDate(a.admitCardDate); dateB = parseDate(b.admitCardDate);
      } else if (box.id === 'results') {
          dateA = parseDate(a.resultDate); dateB = parseDate(b.resultDate);
      } else if (box.id === 'answer-key') {
          dateA = parseDate(a.answerKeyDate); dateB = parseDate(b.answerKeyDate);
      } else if (box.id === 'syllabus') {
          dateA = parseDate(a.syllabusDate); dateB = parseDate(b.syllabusDate);
      } else {
          dateA = parseDate(a.reopenDate || a.postDate); dateB = parseDate(b.reopenDate || b.postDate);
      }
      
      if (dateA !== dateB) return dateB - dateA; 
      return (Number(b.id) || 0) - (Number(a.id) || 0); 
  });

  const topRowIds = ['latest-jobs', 'admit-card', 'results'];
  const limit = topRowIds.includes(box.id) ? 30 : 10;

  return filtered.slice(0, limit).map(post => ({
    title: post.shortTitle || post.title, 
    url: `/${post.slug}`, 
    tag: post.tag, 
    tagColor: post.tagColor || "green", 
    emoji: post.emoji || null
  }));
};
