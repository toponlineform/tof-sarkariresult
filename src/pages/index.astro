---
import Layout from '../layouts/Layout.astro';
// ✅ Humne 'home' folder ke index se import kiya
import { homeBoxes } from '../data/home/index.js';
---

<Layout title="Home - Top Online Form">
    
    <section class="text-center mb-8 bg-white p-6 rounded-lg shadow-sm border-b-4 border-red-600">
        <h1 class="text-2xl md:text-4xl font-extrabold text-gray-800 uppercase tracking-tight">
            Welcome to <span class="text-red-600">TopOnlineForm.com</span>
        </h1>
        <p class="text-gray-600 mt-2 font-medium text-sm md:text-base">
            Sabhi Sarkari Naukri, Result, aur Admit Card ki jankari sabse tez.
        </p>
    </section>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        
        {homeBoxes.map(box => (
            <div id={box.id} class={`bg-white border-2 border-${box.color}-600 rounded-lg shadow-sm h-full flex flex-col`}>
                
                {/* Header */}
                <div class={`bg-${box.color}-600 text-white font-bold p-2 text-center text-lg uppercase tracking-wide`}>
                    {box.title}
                </div>

                {/* Content */}
                <div class="p-3 flex flex-col gap-2 flex-grow">
                    {box.links.map(link => (
                        <a href={link.url} class={`text-blue-700 font-semibold hover:underline hover:text-${box.color}-600 text-sm md:text-base border-b border-gray-100 pb-2 block`}>
                            {link.emoji && <span class="mr-1">{link.emoji}</span>}
                            {link.title}
                            {link.tag && (
                                <span class={`
                                    ml-2 text-[9px] uppercase font-bold px-1.5 py-[1px] rounded-sm text-white inline-block align-middle tracking-wide leading-none
                                    ${link.tagColor === 'red' ? 'bg-red-600 animate-pulse' : ''}
                                    ${link.tagColor === 'green' ? 'bg-green-600' : ''}
                                    ${link.tagColor === 'blue' ? 'bg-blue-600' : ''}
                                    ${link.tagColor === 'purple' ? 'bg-purple-600' : ''}
                                `}>{link.tag}</span>
                            )}
                        </a>
                    ))}
                </div>

                {/* View More */}
                <div class="p-2 text-right border-t border-gray-100 bg-gray-50 rounded-b-lg">
                    <a href={box.viewMoreLink} class="text-xs font-bold text-gray-500 hover:text-black uppercase tracking-wider">
                        View More »
                    </a>
                </div>

            </div>
        ))}

    </div>

    <article class="mt-10 prose max-w-none text-gray-700 bg-white p-6 rounded shadow border-t-2 border-gray-200">
        <h3 class="text-xl font-bold text-gray-800">Why Choose TopOnlineForm.com?</h3>
        <p>TopOnlineForm is India's fastest-growing education portal.</p>
    </article>

</Layout>
