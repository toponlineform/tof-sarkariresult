import Layout from '../layouts/Layout.astro';
// âœ… Manual Boxes Config
import { homeBoxes } from '../data/home/index.js';
// âœ… Master Data (Automatic ke liye zaroori hai)
import { allPosts } from '../data/index.js';

// --- ðŸ§  HYBRID LOGIC ENGINE (With Smart 'Updated Date' Sorting) ---
const getBoxLinks = (box) => {
  if (!box.auto) {
    return box.links;
  }

  const filtered = allPosts.filter(post => post.category === box.categoryName);
  
  filtered.sort((a, b) => {
      const parseDate = (dateStr) => {
          if (!dateStr) return 0;
          const cleanDate = String(dateStr).trim();
          const parts = cleanDate.split('/');
          if (parts.length !== 3) return 0; 
          return new Date(`${parts[2]}-${parts[1]}-${parts[0]}`).getTime();
      };

      const dateA = parseDate(a.updatedDate || a.postDate);
      const dateB = parseDate(b.updatedDate || b.postDate);
      
      if (dateA !== dateB) return dateB - dateA; 
      return (Number(b.id) || 0) - (Number(a.id) || 0); 
  });

  const topRowIds = ['latest-jobs', 'admit-card', 'results'];
  const limit = topRowIds.includes(box.id) ? 30 : 10;

  return filtered.slice(0, limit).map(post => ({
    title: post.shortTitle || post.title, 
    url: `/${post.slug}`, 
    tag: post.tag, 
    tagColor: post.tagColor || "green", 
    emoji: post.emoji || null
  }));
};
