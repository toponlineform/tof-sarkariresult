---
import Layout from '../layouts/Layout.astro';

// ---------------------------------------------------------
// DATA SECTION: Yahan Link aur Title dono dalein
// ---------------------------------------------------------

const jobs = [
  { title: "UP Police Constable Recruitment 2025", url: "/job/up-police-constable-2025" },
  { title: "SSC GD Constable Online Form 2025", url: "/job/ssc-gd-constable-2025" },
  { title: "RRB NTPC Online Form 2025", url: "#" }, // '#' ka matlab link abhi active nahi hai
  { title: "Indian Army Agniveer Rally", url: "#" }
];

const admit = [
  { title: "UPSC Prelims Admit Card 2025", url: "#" },
  { title: "CTET Jan 2025 Hall Ticket", url: "#" },
  { title: "IBPS PO Mains Admit Card", url: "#" }
];

const result = [
  { title: "Bihar Board 12th Result 2025", url: "#" },
  { title: "SSC CGL Tier 1 Result Declared", url: "#" },
  { title: "UGC NET December 2024 Result", url: "#" }
];
---

<Layout title="Home - Top Online Form | Latest Govt Jobs & Sarkari Results">
    
    <section class="text-center mb-8 bg-white p-6 rounded-lg shadow-sm border-b-4 border-red-600">
        <h1 class="text-2xl md:text-4xl font-extrabold text-gray-800 uppercase tracking-tight">
            Welcome to <span class="text-red-600">TopOnlineForm.com</span>
        </h1>
        <p class="text-gray-600 mt-2 font-medium text-sm md:text-base">
            Sabhi Sarkari Naukri, Result, aur Admit Card ki jankari sabse tez.
        </p>
    </section>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        
        <div id="latest-jobs" class="bg-white border-2 border-red-600 rounded-lg shadow-sm">
            <div class="bg-red-600 text-white font-bold p-2 text-center text-lg uppercase tracking-wide">
                Latest Jobs
            </div>
            <div class="p-3 flex flex-col gap-2">
                {jobs.map(item => (
                    <a href={item.url} class="text-blue-700 font-semibold hover:underline hover:text-red-600 text-sm md:text-base border-b border-gray-100 pb-2 block">
                        Live ▸ {item.title}
                    </a>
                ))}
                <div class="text-right mt-2">
                    <a href="#" class="text-xs font-bold text-gray-500 hover:text-black">View More »</a>
                </div>
            </div>
        </div>

        <div id="admit-card" class="bg-white border-2 border-blue-600 rounded-lg shadow-sm">
            <div class="bg-blue-600 text-white font-bold p-2 text-center text-lg uppercase tracking-wide">
                Admit Card
            </div>
            <div class="p-3 flex flex-col gap-2">
                {admit.map(item => (
                    <a href={item.url} class="text-blue-700 font-semibold hover:underline hover:text-blue-600 text-sm md:text-base border-b border-gray-100 pb-2 block">
                        New ▸ {item.title}
                    </a>
                ))}
                <div class="text-right mt-2">
                    <a href="#" class="text-xs font-bold text-gray-500 hover:text-black">View More »</a>
                </div>
            </div>
        </div>

        <div id="results" class="bg-white border-2 border-green-600 rounded-lg shadow-sm">
            <div class="bg-green-600 text-white font-bold p-2 text-center text-lg uppercase tracking-wide">
                Results
            </div>
            <div class="p-3 flex flex-col gap-2">
                {result.map(item => (
                    <a href={item.url} class="text-blue-700 font-semibold hover:underline hover:text-green-600 text-sm md:text-base border-b border-gray-100 pb-2 block">
                        Declared ▸ {item.title}
                    </a>
                ))}
                <div class="text-right mt-2">
                    <a href="#" class="text-xs font-bold text-gray-500 hover:text-black">View More »</a>
                </div>
            </div>
        </div>

    </div>

    <article class="mt-10 prose max-w-none text-gray-700 bg-white p-6 rounded shadow border-t-2 border-gray-200">
        <h3 class="text-xl font-bold text-gray-800">Why Choose TopOnlineForm.com?</h3>
        <p>TopOnlineForm is India's fastest-growing education portal. We provide instant updates on Sarkari Results, Rojgar Result, and all government job notifications directly to your mobile.</p>
    </article>

</Layout>
