---
import Layout from '../layouts/Layout.astro';

// Sample Data
const jobs = ["SSC GD Constable 2025", "UP Police Bharti", "RRB NTPC Online Form"];
const admit = ["UPSC Admit Card", "CTET Hall Ticket"];
const result = ["CBSE 12th Result", "SSC CGL Result"];
---

<Layout title="Home - Latest Govt Jobs & Sarkari Results">
    
    <section class="text-center mb-8 bg-white p-6 rounded-lg shadow-sm border-b-4 border-red-600">
        <h1 class="text-3xl md:text-4xl font-extrabold text-gray-800">Welcome to <span class="text-red-600">TopOnlineForm.com</span></h1>
        <p class="text-gray-600 mt-2 font-medium">Sabhi Sarkari Naukri, Result, aur Admit Card ki jankari sabse tez.</p>
    </section>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        
        <div id="latest-jobs" class="bg-white border-2 border-red-600 rounded-lg shadow-sm">
            <div class="bg-red-600 text-white font-bold p-2 text-center text-lg uppercase">Latest Jobs</div>
            <div class="p-3 flex flex-col gap-2">
                {jobs.map(link => <a href="#" class="text-blue-700 font-medium hover:underline hover:text-red-600 text-sm border-b border-gray-100 pb-1">IMAGE_GENERATION_PLACEHOLDER {link}</a>)}
            </div>
        </div>

        <div id="admit-card" class="bg-white border-2 border-blue-600 rounded-lg shadow-sm">
            <div class="bg-blue-600 text-white font-bold p-2 text-center text-lg uppercase">Admit Card</div>
            <div class="p-3 flex flex-col gap-2">
                {admit.map(link => <a href="#" class="text-blue-700 font-medium hover:underline hover:text-blue-600 text-sm border-b border-gray-100 pb-1">IMAGE_GENERATION_PLACEHOLDER {link}</a>)}
            </div>
        </div>

        <div id="results" class="bg-white border-2 border-green-600 rounded-lg shadow-sm">
            <div class="bg-green-600 text-white font-bold p-2 text-center text-lg uppercase">Results</div>
            <div class="p-3 flex flex-col gap-2">
                {result.map(link => <a href="#" class="text-blue-700 font-medium hover:underline hover:text-green-600 text-sm border-b border-gray-100 pb-1">IMAGE_GENERATION_PLACEHOLDER {link}</a>)}
            </div>
        </div>

    </div>

    <article class="mt-10 prose max-w-none text-gray-700 bg-white p-6 rounded shadow">
        <h3>Why Choose TopOnlineForm.com?</h3>
        <p>TopOnlineForm is India's fastest-growing education portal. We provide instant updates on Sarkari Results, Rojgar Result, and all government job notifications directly to your mobile.</p>
    </article>

</Layout>
