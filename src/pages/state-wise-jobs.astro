---
import Layout from '../layouts/Layout.astro';
import AdSlot from '../components/AdSlot.astro';
import { allPosts } from '../data/index.js';

// --- ðŸ§  SERVER SIDE LOGIC: GROUP JOBS BY STATE ---

const getStateGroups = () => {
  const groups = {};
  
  // 1. Sirf Latest Jobs ko filter karo
  const jobs = allPosts.filter(p => p.category === 'Latest Jobs' || p.category === 'Admission');

  // 2. State wise grouping
  jobs.forEach(job => {
    // Agar data me state missing hai to 'Other' me daal do
    const stateName = job.state || "Central Govt / Other";
    
    if (!groups[stateName]) {
      groups[stateName] = [];
    }
    groups[stateName].push(job);
  });

  // 3. States ko Alphabetically sort karo (Central Govt ko top par rakhne ka logic bhi laga sakte hain)
  const sortedStates = Object.keys(groups).sort();

  return { groups, sortedStates };
};

const { groups, sortedStates } = getStateGroups();

// State Colors (Visual Appeal k liye)
const bgColors = [
  "bg-blue-50 border-blue-200 text-blue-700",
  "bg-green-50 border-green-200 text-green-700",
  "bg-orange-50 border-orange-200 text-orange-700",
  "bg-purple-50 border-purple-200 text-purple-700",
  "bg-red-50 border-red-200 text-red-700",
  "bg-teal-50 border-teal-200 text-teal-700",
];
---

<Layout title="State Wise Govt Jobs 2025 - Find Jobs by State" description="Browse Government Jobs by State. UP, Bihar, Delhi, Haryana, Rajasthan and All India Sarkari Naukri updates.">

  <div class="max-w-7xl mx-auto px-2 md:px-4 py-6 font-sans">
    
    <div class="flex flex-col lg:flex-row gap-6 items-start">

      {/* --- LEFT COLUMN: MAIN CONTENT --- */}
      <main class="flex-1 min-w-0 w-full">
        
        {/* 1. HEADER SECTION */}
        <div class="text-center mb-6 bg-white p-6 border border-gray-200 shadow-sm rounded-lg relative overflow-hidden">
          <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-blue-500 via-purple-500 to-pink-500"></div>
          <h1 class="text-2xl md:text-3xl font-extrabold text-gray-800 uppercase tracking-tight mb-2">
            State Wise <span class="text-[#1a56db]">Govt Jobs</span>
          </h1>
          <p class="text-xs md:text-sm text-gray-500 font-bold tracking-widest uppercase">
            Select your state to find recruitment active in your region
          </p>
        </div>

        {/* ðŸ’° TOP AD SLOT */}
        <AdSlot type="horizontal" />

        {/* 2. STATE QUICK LINKS (Grid) */}
        <div class="bg-white border border-gray-200 p-4 rounded-lg shadow-sm mb-8">
            <h3 class="text-sm font-bold text-gray-700 uppercase mb-4 border-b pb-2">Quick Navigate</h3>
            <div class="grid grid-cols-2 md:grid-cols-4 gap-3">
                {sortedStates.map((state, index) => (
                    <a href={`#${state.replace(/\s+/g, '-').toLowerCase()}`} class={`text-center py-2 px-1 rounded border text-xs font-bold uppercase transition hover:scale-105 shadow-sm ${bgColors[index % bgColors.length]}`}>
                        {state} ({groups[state].length})
                    </a>
                ))}
            </div>
        </div>

        {/* 3. STATE WISE LISTINGS */}
        <div class="space-y-8">
            {sortedStates.map((state) => (
                <div id={state.replace(/\s+/g, '-').toLowerCase()} class="scroll-mt-24">
                    
                    {/* State Header */}
                    <div class="flex items-center gap-2 mb-3">
                        <div class="h-6 w-1 bg-blue-600 rounded-full"></div>
                        <h2 class="text-xl font-bold text-gray-800 uppercase">{state} Jobs</h2>
                    </div>

                    {/* Job Cards for this State */}
                    <div class="bg-white border border-gray-300 rounded-lg overflow-hidden shadow-sm">
                        {groups[state].map((post, i) => (
                            <div class={`flex flex-col md:flex-row md:items-center justify-between p-3 md:p-4 hover:bg-blue-50 transition border-b border-gray-200 last:border-0`}>
                                
                                {/* Job Title */}
                                <div class="flex-1">
                                    <a href={`/${post.slug}`} class="text-sm md:text-base font-bold text-[#1a56db] hover:underline leading-snug">
                                        {post.shortTitle || post.title}
                                    </a>
                                    <div class="flex flex-wrap gap-2 mt-1">
                                        <span class="text-[10px] bg-gray-100 text-gray-600 px-2 py-0.5 rounded border border-gray-200 font-mono">ðŸ“… Post: {post.postDate}</span>
                                        {post.totalPost && <span class="text-[10px] bg-green-50 text-green-700 px-2 py-0.5 rounded border border-green-200 font-bold">Total: {post.totalPost}</span>}
                                    </div>
                                </div>

                                {/* Action Button */}
                                <div class="mt-2 md:mt-0 md:ml-4">
                                    <a href={`/${post.slug}`} class="inline-block text-xs font-bold text-white bg-red-600 hover:bg-red-700 px-3 py-1.5 rounded shadow-sm uppercase tracking-wide">
                                        View Details
                                    </a>
                                </div>

                            </div>
                        ))}
                    </div>
                </div>
            ))}
        </div>

        {/* ðŸ’° BOTTOM AD SLOT */}
        <div class="mt-8">
            <AdSlot type="horizontal" />
        </div>

      </main>

      {/* --- RIGHT COLUMN: SIDEBAR (Standard Sticky) --- */}
      <aside class="hidden lg:block w-[300px] flex-shrink-0">
        <div class="sticky top-4 space-y-6">
            
            {/* WhatsApp Widget */}
            <a href="https://whatsapp.com/channel/0029Vb7TcG06LwHoTXhZKn2D" target="_blank" class="block bg-white border-l-4 border-[#25D366] p-4 shadow-sm hover:shadow-md transition rounded">
                <div class="flex items-center gap-3">
