---
import Layout from '../layouts/Layout.astro';
import { allPosts } from '../data/index.js';

// 1. Query nikalo
const query = Astro.url.searchParams.get('q')?.toLowerCase().trim() || '';

// 2. QUALIFICATION KEYWORDS (Ye wo shabd hain jinke liye hum strict checking karenge)
const qualKeywords = ['10th', '12th', 'iti', 'diploma', 'graduate', 'b.tech', 'pg', 'mphw', 'b.ed'];

// 3. Filter Logic (Super Pro)
const searchResults = query 
  ? allPosts.filter(post => {
      
      // A. Agar Query koi Qualification hai (e.g., '10th', '12th')
      // Toh sirf 'post.qualification' array check karo. Description mat dekho.
      if (qualKeywords.some(k => query.includes(k))) {
          // Safety check: Agar qualification field nahi hai toh false
          return post.qualification?.some(q => q.toLowerCase().includes(query));
      }

      // B. Agar Query normal hai (e.g., 'Police', 'Bihar', 'SSC')
      // Toh sab kuch check karo (Title, State, Tags etc.)
      const searchString = `
        ${post.title} 
        ${post.shortTitle || ''} 
        ${post.state || ''} 
        ${post.tags || ''} 
        ${post.category || ''}
      `.toLowerCase();
      
      return searchString.includes(query);
    })
  : [];

// Sort: Latest Date First
searchResults.sort((a, b) => {
    const dateA = new Date(a.postDate.split('/').reverse().join('-'));
    const dateB = new Date(b.postDate.split('/').reverse().join('-'));
    return dateB - dateA;
});
---

<Layout title={`Search Results for "${query}" - Top Online Form`} noIndex={true}>
  
  <div class="bg-gray-50 min-h-screen p-4 md:p-8">
    <div class="max-w-5xl mx-auto">
        
        {/* Header */}
        <div class="mb-8 bg-white p-6 rounded-lg shadow-sm border border-gray-200">
            <h1 class="text-2xl md:text-3xl font-bold text-gray-800">
                {query ? (
                    <>Search Results for: <span class="text-red-600">"{query.toUpperCase()}"</span></>
                ) : (
                    "Search Jobs"
                )}
            </h1>
            <p class="text-gray-500 mt-2">Found {searchResults.length} matching updates.</p>
            
            {/* Search Box */}
            <form action="/search" method="get" class="mt-4 flex gap-2">
                <input 
                    type="text" 
                    name="q" 
                    placeholder="Try '10th', 'SSC', 'UP Police'..." 
                    defaultValue={query}
                    class="flex-1 p-3 border border-gray-300 rounded focus:border-blue-500 outline-none"
                />
                <button type="submit" class="bg-blue-600 text-white px-6 py-3 rounded font-bold hover:bg-blue-700">
                    Search
                </button>
            </form>
        </div>

        {/* Results Grid */}
        {searchResults.length > 0 ? (
            <div class="grid gap-4">
                {searchResults.map((post) => (
                    <a href={`/job/${post.slug}`} class="block group">
                        <div class="flex flex-col md:flex-row md:items-center justify-between bg-white border border-gray-200 p-4 rounded-lg shadow-sm hover:shadow-md hover:border-blue-300 transition">
                            
                            <div class="flex-1">
                                <div class="flex items-center gap-2 mb-1">
                                    <span class="text-xs font-bold text-white bg-blue-600 px-2 py-0.5 rounded">
                                        {post.category}
                                    </span>
                                    {/* Qualification Badge Show Karo (Agar hai) */}
                                    {post.qualification && (
                                        <span class="text-xs font-bold text-gray-700 bg-yellow-100 px-2 py-0.5 rounded border border-yellow-200">
                                            ðŸŽ“ {post.qualification[0].toUpperCase()}
                                        </span>
                                    )}
                                </div>
                                <h2 class="text-lg font-bold text-gray-800 group-hover:text-blue-700">
                                    {post.shortTitle || post.title}
                                </h2>
                                <p class="text-sm text-gray-500 mt-1 line-clamp-1">
                                    {post.shortInfo}
                                </p>
                            </div>

                            <div class="mt-3 md:mt-0 md:ml-4 text-right">
                                <span class="text-xs text-gray-400 block mb-1">Posted: {post.postDate}</span>
                                <span class="text-red-600 font-bold text-sm">View Details Â»</span>
                            </div>

                        </div>
                    </a>
                ))}
            </div>
        ) : (
            <div class="text-center py-20 bg-white rounded border border-dashed border-gray-300">
                <p class="text-gray-500 text-lg mb-4">No jobs found for your search.</p>
                <p class="text-sm text-gray-400">
                    If you are searching for a qualification (e.g., 10th), make sure the data is updated.
                </p>
                <a href="/" class="text-blue-600 font-bold hover:underline mt-4 block">Go Back Home</a>
            </div>
        )}

    </div>
  </div>

</Layout>
