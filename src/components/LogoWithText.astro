<div class="logo-text-container">
  
  <div class="letter-t-wrapper">
    <div class="t-top-row">
      <div class="dot"></div>
      <div class="dot"></div>
      <div class="dot"></div>
    </div>
    <div class="t-stem"></div>
  </div>

  <div class="text-content">
    <span class="word-main">OP ONLINE FORM</span>
  </div>

  <div class="doc-icon-wrapper">
    <div class="doc-rect">
      <div class="scan-line"></div>
    </div>
  </div>

</div>

<style>
  /* --- MASTER CONTAINER --- */
  .logo-text-container {
    display: flex;
    align-items: center; 
    /* ❌ GAP REMOVED: Pehle yahan gap tha, ab hum margin se control karenge */
    gap: 0; 
    
    font-family: inherit;
    font-weight: 900;
    color: white;
    line-height: 1;
    white-space: nowrap;
    flex-shrink: 0;
    
    /* Fluid Typography */
    font-size: clamp(20px, 4vw, 32px); 
  }

  /* --- TEXT --- */
  .text-content {
    font-size: 1em; 
    letter-spacing: -0.03em;
    position: relative;
    top: 0.02em; 
  }

  /* --- T ICON --- */
  .letter-t-wrapper {
    height: 0.9em; 
    width: 0.75em;
    display: flex;
    flex-direction: column;
    justify-content: space-between; 
    
    /* ✅ FIX: Sirf halka sa saans lene ka space, taaki 'T' aur 'O' overlap na karein */
    margin-right: 0.03em; 
  }

  .t-top-row {
    display: flex;
    justify-content: space-between;
    height: 0.22em; 
    width: 100%;
  }

  .t-stem { 
    width: 0.24em; 
    height: 0.62em; 
    background-color: white; 
    border-radius: 1px; 
    align-self: center;
    animation: slideUp 1.5s ease-out forwards;
  }
  
  .dot { 
    width: 0.22em; height: 0.22em; 
    background-color: white; border-radius: 1px; 
  }

  /* --- FORM ICON --- */
  .doc-icon-wrapper {
    /* ✅ FIX: Icon ko thoda door rakha taaki wo text se chipke na */
    margin-left: 0.25em; 
    
    height: 0.9em; 
    display: flex;
    align-items: center;
  }

  .doc-rect {
    width: 0.75em; height: 0.9em; 
    border: 0.08em solid white; 
    border-radius: 2px;
    position: relative;
    background: rgba(255,255,255,0.1); 
    display: flex; justify-content: center;
  }

  .scan-line {
    width: 80%; height: 0.08em;
    background-color: #facc15; 
    position: absolute; top: 20%;
    box-shadow: 0 0 4px #facc15;
    animation: scanMove 2s linear infinite;
  }

  /* --- ANIMATIONS --- */
  .dot:nth-child(1) { animation: blink 1.5s infinite; }
  .dot:nth-child(2) { animation: blink 1.5s 0.2s infinite; }
  .dot:nth-child(3) { animation: blink 1.5s 0.4s infinite; }

  @keyframes blink { 0%, 100% { opacity: 1; } 50% { opacity: 0.5; } }
  @keyframes slideUp { from { height: 0; } to { height: 0.62em; } }
  @keyframes scanMove { 
    0% { top: 10%; opacity: 0.5; } 
    50% { opacity: 1; } 
    100% { top: 80%; opacity: 0.5; } 
  }

</style>
