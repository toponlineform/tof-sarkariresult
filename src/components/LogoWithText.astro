<div class="logo-text-container">
  
  <div class="letter-t-wrapper">
    <div class="t-shape">
      <div class="t-top">
        <div class="dot"></div>
        <div class="dot"></div>
        <div class="dot"></div>
      </div>
      <div class="t-stem"></div>
    </div>
  </div>

  <div class="text-content">
    <span class="word-main">OP ONLINE FORM</span>
  </div>

  <div class="doc-icon-wrapper">
    <div class="doc-rect">
      <div class="scan-line"></div>
    </div>
  </div>

</div>

<style>
  /* --- CONTAINER --- */
  .logo-text-container {
    display: flex;
    align-items: flex-end; 
    gap: 0.15em;
    font-family: inherit;
    font-weight: 900; 
    text-transform: uppercase;
    color: white;
    font-size: 1.5rem; 
    line-height: 1; 
  }

  /* --- TEXT STYLING --- */
  .text-content {
    display: flex;
    align-items: flex-end;
    line-height: 1;
    position: relative;
    bottom: -0.02em; 
  }

  /* --- ANIMATED "T" STYLES --- */
  .letter-t-wrapper {
    height: 0.9em; 
    display: flex;
    align-items: flex-end;
    margin-right: 0.05em;
  }

  .t-shape { 
    display: flex; 
    flex-direction: column; 
    align-items: center; 
    gap: 0.08em; /* Gap wahi rakha hai jo aapne manga tha */
  }
  
  .t-top { 
    display: flex; 
    gap: 0.08em; 
  }
  
  /* Dots Size (Thoda Chota/Patla kiya) */
  .dot { 
    width: 0.18em; /* Phele 0.22em tha */
    height: 0.18em; 
    background-color: white; 
    border-radius: 1px; 
  }
  
  /* Stem Size (Thoda Patla kiya) */
  .t-stem { 
    width: 0.18em; /* Phele 0.24em tha */
    height: 0.64em; 
    background-color: white; 
    border-radius: 1px; 
    animation: slideUp 1.5s ease-out forwards;
  }
  
  /* Animations */
  .t-shape .dot:nth-child(1) { animation: blink 1.5s infinite; }
  .t-shape .dot:nth-child(2) { animation: blink 1.5s 0.2s infinite; }
  .t-shape .dot:nth-child(3) { animation: blink 1.5s 0.4s infinite; }


  /* --- SCANNING FORM ICON STYLES --- */
  .doc-icon-wrapper {
    margin-left: 0.2em;
    height: 0.9em; 
    display: flex;
    align-items: center;
    padding-bottom: 0.1em;
  }

  .doc-rect {
    width: 0.7em; height: 0.85em;
    border: 0.08em solid white; /* Border ko bhi patla kiya (Phele 0.1em tha) */
    border-radius: 2px;
    position: relative;
    background: rgba(255,255,255,0.1); 
    display: flex; justify-content: center;
  }

  .scan-line {
    width: 80%; height: 0.08em; /* Line bhi thodi patli ki */
    background-color: #facc15; 
    position: absolute; top: 20%;
    box-shadow: 0 0 3px #facc15;
    animation: scanMove 2s linear infinite;
  }

  /* --- ANIMATION KEYFRAMES --- */
  @keyframes blink { 0%, 100% { opacity: 1; } 50% { opacity: 0.5; } }
  
  @keyframes slideUp { 
    from { height: 0; } 
    to { height: 0.64em; } 
  }
  
  @keyframes scanMove { 
    0% { top: 10%; opacity: 0.5; } 
    50% { opacity: 1; } 
    100% { top: 80%; opacity: 0.5; } 
  }

</style>
