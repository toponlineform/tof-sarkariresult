<div class="logo-text-container">
  
  <div class="letter-t-wrapper">
    <div class="t-shape">
      <div class="t-top">
        <div class="dot"></div>
        <div class="dot"></div>
        <div class="dot"></div>
      </div>
      <div class="t-stem"></div>
    </div>
  </div>

  <div class="text-content">
    <span class="word-main">OP ONLINE FORM</span>
  </div>

  <div class="doc-icon-wrapper">
    <div class="doc-rect">
      <div class="scan-line"></div>
    </div>
  </div>

</div>

<style>
  /* --- CONTAINER --- */
  .logo-text-container {
    display: flex;
    align-items: center;
    gap: 0.15em; /* Gap kam kiya taaki tight lage */
    font-family: inherit;
    font-weight: 900; /* Extra Black Bold */
    text-transform: uppercase;
    color: white;
    /* Font size ko parent se thoda bada kiya */
    font-size: 1.1em; 
  }

  /* --- TEXT STYLING --- */
  .text-content {
    display: flex;
    align-items: center;
    line-height: 1;
    letter-spacing: -0.02em; /* Letters ko thoda pass laye */
    position: relative;
    top: 1px; /* Optical alignment */
  }

  /* --- ANIMATED "T" STYLES (Scaled Down) --- */
  .letter-t-wrapper {
    display: flex;
    align-items: flex-end;
    margin-right: 0.05em;
    padding-bottom: 0.12em; /* Text ke baseline se match kiya */
  }

  .t-shape { 
    display: flex; flex-direction: column; align-items: center; gap: 0.08em; 
  }
  .t-top { display: flex; gap: 0.08em; }
  
  /* Dots aur Stem ko text ke stroke jitna mota rakha */
  .dot { width: 0.22em; height: 0.22em; background-color: white; border-radius: 1px; }
  .t-stem { width: 0.22em; height: 0.55em; background-color: white; border-radius: 1px; }
  
  /* Animations */
  .t-shape .dot:nth-child(1) { animation: blink 1.5s infinite; }
  .t-shape .dot:nth-child(2) { animation: blink 1.5s 0.2s infinite; }
  .t-shape .t-stem { animation: slideDown 1.5s ease-out forwards; }


  /* --- SCANNING FORM ICON STYLES (Scaled Down) --- */
  .doc-icon-wrapper {
    margin-left: 0.3em;
    display: flex;
    align-items: center;
    padding-bottom: 0.1em; /* Alignment fix */
  }

  .doc-rect {
    width: 0.7em; height: 0.85em; /* Height kam ki taaki text se bada na lage */
    border: 0.12em solid white; 
    border-radius: 2px;
    position: relative;
    background: rgba(255,255,255,0.1); 
    display: flex; justify-content: center;
  }

  .scan-line {
    width: 80%; height: 0.1em;
    background-color: #facc15; 
    position: absolute; top: 20%;
    box-shadow: 0 0 4px #facc15;
    animation: scanMove 2s linear infinite;
  }

  /* --- ANIMATIONS --- */
  @keyframes blink { 0%, 100% { opacity: 1; } 50% { opacity: 0.5; } }
  @keyframes slideDown { from { height: 0; } to { height: 0.55em; } }
  @keyframes scanMove { 
    0% { top: 10%; opacity: 0.5; } 
    50% { opacity: 1; } 
    100% { top: 80%; opacity: 0.5; } 
  }
</style>
