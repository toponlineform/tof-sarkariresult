<div class="logo-text-container">
  
  <div class="letter-t-wrapper">
    <div class="t-top-row">
      <div class="dot"></div>
      <div class="dot"></div>
      <div class="dot"></div>
    </div>
    <div class="t-stem"></div>
  </div>

  <div class="text-content">
    <span class="word-main">OP ONLINE FORM</span>
  </div>

  <div class="doc-icon-wrapper">
    <div class="doc-rect">
      <div class="scan-line"></div>
    </div>
  </div>

</div>

<style>
  /* --- MASTER CONTAINER (Yahan se size control hoga) --- */
  .logo-text-container {
    display: flex;
    align-items: center; /* Sabko center line me rakho */
    gap: 0.2em; /* Beech ka gap relative */
    font-family: inherit;
    font-weight: 900;
    color: white;
    line-height: 1; /* Extra spacing khatam */
    
    /* --- RESPONSIVE SIZE MAGIC --- */
    font-size: 20px; /* Mobile ke liye default size */
  }

  /* Desktop ke liye size bada kar do */
  @media (min-width: 768px) {
    .logo-text-container {
      font-size: 28px; /* Laptop/PC pe bada dikhega */
    }
  }

  /* --- TEXT --- */
  .text-content {
    font-size: 1em; /* Jo container ka size, wahi text ka size */
    letter-spacing: -0.03em;
    position: relative;
    top: 0.02em; /* Optical alignment */
  }

  /* --- T ICON (Calculated relative to Text) --- */
  .letter-t-wrapper {
    height: 0.9em; /* Text ki height ke barabar */
    width: 0.75em;
    display: flex;
    flex-direction: column;
    justify-content: space-between; /* Gap automatically manage hoga */
    margin-right: 0.02em;
  }

  .t-top-row {
    display: flex;
    justify-content: space-between;
    height: 0.22em; 
    width: 100%;
  }

  .t-stem { 
    width: 0.24em; 
    height: 0.62em; /* Balance banaya taaki dot se touch na ho */
    background-color: white; 
    border-radius: 1px; 
    align-self: center;
    animation: slideUp 1.5s ease-out forwards;
  }
  
  .dot { 
    width: 0.22em; height: 0.22em; 
    background-color: white; border-radius: 1px; 
  }

  /* --- FORM ICON (Calculated relative to Text) --- */
  .doc-icon-wrapper {
    margin-left: 0.2em;
    height: 0.9em; /* Text ki height ke barabar */
    display: flex;
    align-items: center;
  }

  .doc-rect {
    width: 0.75em; height: 0.9em; /* Icon Text se bada nahi hoga */
    border: 0.08em solid white; 
    border-radius: 2px;
    position: relative;
    background: rgba(255,255,255,0.1); 
    display: flex; justify-content: center;
  }

  .scan-line {
    width: 80%; height: 0.08em;
    background-color: #facc15; 
    position: absolute; top: 20%;
    box-shadow: 0 0 4px #facc15;
    animation: scanMove 2s linear infinite;
  }

  /* --- ANIMATIONS --- */
  .dot:nth-child(1) { animation: blink 1.5s infinite; }
  .dot:nth-child(2) { animation: blink 1.5s 0.2s infinite; }
  .dot:nth-child(3) { animation: blink 1.5s 0.4s infinite; }

  @keyframes blink { 0%, 100% { opacity: 1; } 50% { opacity: 0.5; } }
  @keyframes slideUp { from { height: 0; } to { height: 0.62em; } }
  @keyframes scanMove { 
    0% { top: 10%; opacity: 0.5; } 
    50% { opacity: 1; } 
    100% { top: 80%; opacity: 0.5; } 
  }

</style>
