---
// src/components/LogoWithText.astro

// ==========================================
// üéõÔ∏è CONTROL CENTER (Yahan se Control karo)
// ==========================================
const SHOW_ANIMATION = true; // ‚úÖ 'true' for Animation, 'false' for Simple Text
// ==========================================
---

<div 
  class={`logo-text-container ${SHOW_ANIMATION ? 'animated-mode' : 'simple-mode'}`}
  aria-label="Top Online Form" 
  role="img"
>
  
  {/* 1. LIVE T (Visual Only - Screen Reader se chupa diya) */}
  {SHOW_ANIMATION && (
    <div class="letter-t-wrapper" aria-hidden="true">
      <div class="t-top-row">
        <div class="dot"></div>
        <div class="dot"></div>
        <div class="dot"></div>
      </div>
      <div class="t-stem"></div>
    </div>
  )}

  {/* 2. TEXT (Visual Only - Screen Reader se chupa diya kyunki parent label padha jayega) */}
  <div class="text-content" aria-hidden="true">
    <span class="word-main">
      {SHOW_ANIMATION ? "OP ONLINE FORM" : "TOP ONLINE FORM"}
    </span>
  </div>

  {/* 3. SCANNING FORM (Visual Only) */}
  {SHOW_ANIMATION && (
    <div class="doc-icon-wrapper" aria-hidden="true">
      <div class="doc-rect">
        <div class="scan-line"></div>
      </div>
    </div>
  )}

</div>

<style>
  /* --- MASTER CONTAINER --- */
  .logo-text-container {
    display: flex;
    align-items: center; 
    font-family: inherit;
    font-weight: 900;
    color: white;
    line-height: 1;
    white-space: nowrap;
    flex-shrink: 0;
    
    /* Fluid Typography - Size control */
    font-size: clamp(20px, 4vw, 32px); 
  }

  /* --- GAP CONTROL --- */
  .animated-mode { gap: 0; }
  .simple-mode { gap: 0; letter-spacing: -0.02em; }


  /* --- TEXT STYLING --- */
  .text-content {
    font-size: 1em; 
    letter-spacing: -0.03em;
    position: relative;
    top: 0.02em; 
  }

  /* =========================================
     ANIMATION STYLES
     ========================================= */

  /* --- T ICON --- */
  .letter-t-wrapper {
    height: 0.9em; 
    width: 0.75em;
    display: flex;
    flex-direction: column;
    justify-content: space-between; 
    margin-right: 0.03em; /* T aur O ke beech ka gap */
  }

  .t-top-row {
    display: flex;
    justify-content: space-between;
    height: 0.22em; 
    width: 100%;
  }

  .t-stem { 
    width: 0.24em; 
    height: 0.62em; 
    background-color: white; 
    border-radius: 1px; 
    align-self: center;
    animation: slideUp 1.5s ease-out forwards;
  }
  
  .dot { 
    width: 0.22em; height: 0.22em; 
    background-color: white; border-radius: 1px; 
  }

  /* --- FORM ICON --- */
  .doc-icon-wrapper {
    margin-left: 0.25em; /* Text aur Form Icon ke beech ka gap */
    height: 0.9em; 
    display: flex;
    align-items: center;
  }

  .doc-rect {
    width: 0.75em; height: 0.9em; 
    border: 0.08em solid white; 
    border-radius: 2px;
    position: relative;
    background: rgba(255,255,255,0.1); 
    display: flex; justify-content: center;
  }

  .scan-line {
    width: 80%; height: 0.08em;
    background-color: #facc15; 
    position: absolute; top: 20%;
    box-shadow: 0 0 4px #facc15;
    animation: scanMove 2s linear infinite;
  }

  /* --- ANIMATION KEYFRAMES --- */
  .dot:nth-child(1) { animation: blink 1.5s infinite; }
  .dot:nth-child(2) { animation: blink 1.5s 0.2s infinite; }
  .dot:nth-child(3) { animation: blink 1.5s 0.4s infinite; }

  @keyframes blink { 0%, 100% { opacity: 1; } 50% { opacity: 0.5; } }
  @keyframes slideUp { from { height: 0; } to { height: 0.62em; } }
  @keyframes scanMove { 
    0% { top: 10%; opacity: 0.5; } 
    50% { opacity: 1; } 
    100% { top: 80%; opacity: 0.5; } 
  }

</style>
