<div class="logo-text-container">
  
  <div class="letter-t-wrapper">
    <div class="t-top-row">
      <div class="dot"></div>
      <div class="dot"></div>
      <div class="dot"></div>
    </div>
    <div class="t-stem"></div>
  </div>

  <div class="text-content">
    <span class="word-main">OP ONLINE FORM</span>
  </div>

  <div class="doc-icon-wrapper">
    <div class="doc-rect">
      <div class="scan-line"></div>
    </div>
  </div>

</div>

<style>
  /* --- CONTAINER --- */
  .logo-text-container {
    display: flex;
    align-items: flex-end; /* Niche se align kiya taaki Text aur T ek line me hon */
    gap: 0.1em;
    font-family: inherit;
    font-weight: 900; /* Extra Bold */
    text-transform: uppercase;
    color: white;
    /* Line height 1 bahut zaroori hai taaki height calculation sahi ho */
    line-height: 0.9; 
  }

  /* --- TEXT STYLING --- */
  .text-content {
    display: flex;
    align-items: flex-end;
  }
  
  .word-main {
    display: inline-block;
    /* Thoda sa adjustment taaki letters 'O' aur 'T' same level pe lagen */
    position: relative;
    top: 0.02em; 
  }

  /* --- ANIMATED "T" STYLES (Magic Numbers using 'em') --- */
  .letter-t-wrapper {
    /* Total Height = 0.9em (Jo ki Capital Letters ki height hoti hai) */
    height: 0.9em; 
    width: 0.75em;
    display: flex;
    flex-direction: column;
    justify-content: space-between; /* Dots upar, Stem niche */
    margin-right: 0.05em;
    padding-bottom: 0.02em; /* Micro adjustment */
  }

  /* Dots Row */
  .t-top-row {
    display: flex;
    justify-content: space-between;
    height: 0.22em; 
    width: 100%;
  }
  
  /* Stem (Dandi) */
  .t-stem { 
    width: 0.24em; 
    height: 0.64em; /* Remaining height */
    background-color: white; 
    border-radius: 1px; 
    align-self: center;
    /* Animation */
    animation: slideUp 1.5s ease-out forwards;
  }
  
  .dot { 
    width: 0.22em; 
    height: 0.22em; 
    background-color: white; 
    border-radius: 1px; 
  }
  
  /* Animations */
  .dot:nth-child(1) { animation: blink 1.5s infinite; }
  .dot:nth-child(2) { animation: blink 1.5s 0.2s infinite; }
  .dot:nth-child(3) { animation: blink 1.5s 0.4s infinite; }

  /* --- SCANNING FORM ICON STYLES --- */
  .doc-icon-wrapper {
    margin-left: 0.3em;
    height: 0.9em; /* Match Text Height */
    display: flex;
    align-items: center;
    padding-bottom: 0.1em;
  }

  .doc-rect {
    width: 0.7em; height: 0.85em;
    border: 0.1em solid white; 
    border-radius: 2px;
    position: relative;
    background: rgba(255,255,255,0.1); 
    display: flex; justify-content: center;
  }

  .scan-line {
    width: 80%; height: 0.1em;
    background-color: #facc15; 
    position: absolute; top: 20%;
    box-shadow: 0 0 4px #facc15;
    animation: scanMove 2s linear infinite;
  }

  /* --- ANIMATION KEYFRAMES --- */
  @keyframes blink { 0%, 100% { opacity: 1; } 50% { opacity: 0.5; } }
  
  @keyframes slideUp { 
    from { height: 0; } 
    to { height: 0.64em; } 
  }
  
  @keyframes scanMove { 
    0% { top: 10%; opacity: 0.5; } 
    50% { opacity: 1; } 
    100% { top: 80%; opacity: 0.5; } 
  }

</style>
