<div class="logo-text-container">
  
  <div class="letter-t-wrapper">
    <div class="t-shape">
      <div class="t-top">
        <div class="dot"></div>
        <div class="dot"></div>
        <div class="dot"></div>
      </div>
      <div class="t-stem"></div>
    </div>
  </div>

  <div class="text-content">
    <span class="word-main">OP ONLINE FORM</span>
  </div>

  <div class="doc-icon-wrapper">
    <div class="doc-rect">
      <div class="scan-line"></div>
    </div>
  </div>

</div>

<style>
  /* --- CONTAINER --- */
  .logo-text-container {
    display: flex;
    align-items: center;
    gap: 4px;
    font-family: inherit; /* Header ka font use karega */
    font-weight: 1000; /* Extra Bold */
    text-transform: uppercase;
    color: white; /* Sab kuch white */
  }

  /* --- TEXT STYLING --- */
  .text-content {
    display: flex;
    align-items: center;
    line-height: 1;
    letter-spacing: -0.05em; /* Thoda tight spacing professional lagta hai */
  }

  /* --- ANIMATED "T" STYLES --- */
  .letter-t-wrapper {
    display: flex;
    align-items: flex-end;
    margin-right: 0.5px;
    padding-bottom: 2px; /* Thoda alignment fix */
  }

  .t-shape { 
    display: flex; flex-direction: column; align-items: center; gap: 2px; 
  }
  .t-top { display: flex; gap: 2px; }
  
  /* Dots aur Stem WHITE hain ab */
  .dot { width: 8px; height: 8px; background-color: white; border-radius: 1px; }
  .t-stem { width: 8px; height: 20px; background-color: white; border-radius: 1px; }
  
  /* Animations */
  .t-shape .dot:nth-child(1) { animation: blink 1.5s infinite; }
  .t-shape .dot:nth-child(2) { animation: blink 1.5s 0.2s infinite; }
  .t-shape .dot:nth-child(3) { animation: blink 1.5s 0.4s infinite; }
  .t-shape .t-stem { animation: slideDown 1.5s ease-out forwards; }


  /* --- SCANNING FORM ICON STYLES --- */
  .doc-icon-wrapper {
    margin-left: 6px;
    display: flex;
    align-items: center;
  }

  .doc-rect {
    width: 24px; height: 32px;
    border: 2px solid white; /* White Border */
    border-radius: 3px;
    position: relative;
    background: rgba(255,255,255,0.1); /* Halka sa transparent white */
    display: flex; justify-content: center;
  }

  .scan-line {
    width: 18px; height: 2px;
    background-color: #facc15; /* Yellow-400 (Tailwind) for contrast */
    position: absolute; top: 3px;
    box-shadow: 0 0 5px #facc15;
    animation: scanMove 2s linear infinite;
  }

  /* --- ANIMATION KEYFRAMES --- */
  @keyframes blink { 0%, 100% { opacity: 1; } 50% { opacity: 0.5; } }
  @keyframes slideDown { from { height: 0; } to { height: 20px; } }
  @keyframes scanMove { 
    0% { top: 3px; opacity: 0.5; } 
    50% { opacity: 1; } 
    100% { top: 25px; opacity: 0.5; } 
  }

</style>
