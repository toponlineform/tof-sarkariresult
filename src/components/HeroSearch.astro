---
// src/components/HeroSearch.astro
const currentYear = new Date().getFullYear();
---

<section class="relative bg-white border-b-4 border-red-600 mb-8 overflow-hidden">
  
  {/* Background Pattern (Subtle Grid) */}
  <div class="absolute inset-0 opacity-10 pointer-events-none" 
       style="background-image: radial-gradient(#cbd5e1 1px, transparent 1px); background-size: 20px 20px;">
  </div>

  <div class="relative max-w-7xl mx-auto px-4 py-8 md:py-12 flex flex-col md:flex-row items-center gap-8">
    
    {/* LEFT: TEXT & SEARCH */}
    <div class="w-full md:w-2/3 text-center md:text-left z-10">
      
      <p class="text-red-600 font-bold tracking-widest uppercase text-xs md:text-sm mb-2 animate-pulse">
        ðŸ”´ Live Updates: {currentYear}
      </p>
      
      <h1 class="text-3xl md:text-5xl font-extrabold text-gray-900 leading-tight mb-4">
        Find Your Dream <br class="hidden md:block"/>
        <span class="text-transparent bg-clip-text bg-gradient-to-r from-red-600 to-red-800">Sarkari Job</span> Today.
      </h1>

      <p class="text-gray-500 text-sm md:text-lg mb-6 max-w-lg mx-auto md:mx-0">
        India's No.1 Portal for <strong>Sarkari Result</strong>, Admit Cards & Latest Online Forms.
      </p>

      {/* SEARCH BAR (Triggers Pagefind) */}
      <div class="relative max-w-xl mx-auto md:mx-0 group">
        <div class="absolute -inset-1 bg-gradient-to-r from-red-600 to-yellow-400 rounded-lg blur opacity-25 group-hover:opacity-50 transition duration-200"></div>
        <button onclick="document.getElementById('searchOverlay').classList.remove('hidden'); document.getElementById('searchOverlay').classList.add('flex'); setTimeout(() => document.querySelector('.pagefind-ui__search-input').focus(), 100);" 
                class="relative w-full bg-white text-left text-gray-400 py-3 md:py-4 px-6 rounded-lg shadow-sm border border-gray-200 flex items-center gap-3 hover:border-red-300 hover:shadow-md transition-all">
          <svg class="w-5 h-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/></svg>
          <span class="text-sm md:text-base font-medium">Search for "SSC GD", "UP Police", "Railway"...</span>
        </button>
      </div>

      {/* TRENDING TAGS */}
      <div class="mt-6 flex flex-wrap justify-center md:justify-start gap-2 text-xs md:text-sm">
        <span class="font-bold text-gray-700 flex items-center gap-1">
          <svg class="w-4 h-4 text-orange-500" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M12.395 2.553a1 1 0 00-1.45-.385c-.345.23-.614.558-.822.88-.214.33-.403.713-.57 1.116-.334.804-.614 1.768-.84 2.734a31.365 31.365 0 00-.613 3.58 2.64 2.64 0 01-.945-1.067c-.328-.68-.398-1.534-.398-2.654A1 1 0 005.05 6.05 6.981 6.981 0 003 11a7 7 0 1011.95-4.95c-.592-.591-.98-.985-1.348-1.467-.363-.476-.724-1.063-1.207-2.03zM12.12 15.12A3 3 0 017 13s.879.5 2.5.5c0-1 .5-4 1.25-4.5.5 1 .786 1.293 1.371 1.879A2.99 2.99 0 0113 13a2.99 2.99 0 01-.879 2.121z" clip-rule="evenodd"/></svg>
          Trending:
        </span>
        <a href="/search?q=ssc" class="bg-gray-100 hover:bg-red-50 text-gray-600 hover:text-red-600 px-3 py-1 rounded-full transition border border-gray-200">SSC CGL</a>
        <a href="/search?q=railway" class="bg-gray-100 hover:bg-red-50 text-gray-600 hover:text-red-600 px-3 py-1 rounded-full transition border border-gray-200">RRB NTPC</a>
        <a href="/search?q=upsc" class="bg-gray-100 hover:bg-red-50 text-gray-600 hover:text-red-600 px-3 py-1 rounded-full transition border border-gray-200">UPSC</a>
        <a href="/search?q=police" class="bg-gray-100 hover:bg-red-50 text-gray-600 hover:text-red-600 px-3 py-1 rounded-full transition border border-gray-200">Police</a>
      </div>

    </div>

    {/* RIGHT: THE SCANNER ANIMATION */}
    <div class="hidden md:flex w-1/3 justify-center relative">
      <div class="relative w-40 h-48">
         {/* Reuse the StoryLogo component logic or just embed SVG here for simplicity */}
         <div class="absolute inset-0 bg-white rounded-xl shadow-lg border-2 border-gray-100 flex items-center justify-center overflow-hidden">
             {/* Simple visual representation of scanning */}
             <div class="w-24 h-32 border-2 border-gray-300 rounded flex flex-col items-center justify-start pt-4 gap-2">
                 <div class="w-16 h-2 bg-gray-200 rounded"></div>
                 <div class="w-12 h-2 bg-gray-200 rounded"></div>
                 <div class="w-16 h-2 bg-gray-200 rounded"></div>
             </div>
             {/* Scanner Line */}
             <div class="absolute top-0 w-full h-1 bg-yellow-400 shadow-[0_0_15px_rgba(250,204,21,0.8)] animate-scan"></div>
         </div>
         {/* Floating Badge */}
         <div class="absolute -bottom-4 -right-4 bg-green-100 text-green-700 px-3 py-1 rounded-full text-xs font-bold shadow-sm border border-green-200 flex items-center gap-1">
             <span class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></span> Verified
         </div>
      </div>
    </div>

  </div>

  <style>
    @keyframes scan {
      0% { top: 0%; opacity: 0; }
      10% { opacity: 1; }
      90% { opacity: 1; }
      100% { top: 100%; opacity: 0; }
    }
    .animate-scan {
      animation: scan 2s linear infinite;
    }
  </style>

</section>
