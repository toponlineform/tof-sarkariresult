        </div>
        
        <h3 class="text-xl font-bold text-gray-900 mb-1">Wait! Don't Miss Out</h3>
        <p class="text-gray-600 text-sm mb-6">Join our WhatsApp Channel for instant job alerts, admit cards & results directly on your phone.</p>
        
        <a href={whatsappLink} class="block w-full bg-[#25D366] hover:bg-[#20bd5a] text-white font-bold py-3 rounded-lg shadow-md transition transform hover:scale-105 mb-3">
            Join Now for Free
        </a>
        <button id="laterBtn" class="text-xs text-gray-400 hover:text-gray-600 underline">Maybe Later</button>
    </div>
</div>

{/* 3. LOGIC SCRIPT */}
<script>
    document.addEventListener('DOMContentLoaded', () => {
        const popup = document.getElementById('interactionPopup');
        const closeBtn = document.getElementById('closePopup');
        const laterBtn = document.getElementById('laterBtn');
        
        // Check if user has already seen the popup in this session
        const hasSeenPopup = sessionStorage.getItem('hasSeenWAPopup');

        // Show Popup Function
        const showPopup = () => {
            if (!hasSeenPopup) {
                popup.classList.remove('hidden');
                popup.classList.add('flex');
                sessionStorage.setItem('hasSeenWAPopup', 'true'); // Mark as seen for this session
            }
        };

        // Trigger on ANY First Interaction (Click or Touch)
        if (!hasSeenPopup) {
            // "once: true" means listener will run only once and then remove itself
            window.addEventListener('click', showPopup, { once: true });
            window.addEventListener('touchstart', showPopup, { once: true });
        }

        // Close Logic
        const closeLogic = () => {
            popup.classList.add('hidden');
            popup.classList.remove('flex');
        };

        closeBtn.addEventListener('click', (e) => { e.stopPropagation(); closeLogic(); });
        laterBtn.addEventListener('click', (e) => { e.stopPropagation(); closeLogic(); });
    });
</script>
